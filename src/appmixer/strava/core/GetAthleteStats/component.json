{
    "name": "appmixer.strava.core.GetAthleteStats",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Retrieve aggregated performance statistics for a given athlete.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:strava"
    },
    "quota": {
        "manager": "appmixer:strava",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "athleteId": {
                        "type": "string"
                    }
                },
                "required": [
                    "athleteId"
                ]
            },
            "inspector": {
                "inputs": {
                    "athleteId": {
                        "type": "text",
                        "tooltip": "The ID of the athlete whose stats are being requested.",
                        "label": "Athlete ID",
                        "index": 0
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                {
                    "label": "Recent Run Totals",
                    "value": "recent_run_totals",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "All Run Totals",
                    "value": "all_run_totals",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Recent Swim Totals",
                    "value": "recent_swim_totals",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Biggest Ride Distance",
                    "value": "biggest_ride_distance",
                    "schema": {
                        "type": "number"
                    }
                },
                {
                    "label": "Ytd Swim Totals",
                    "value": "ytd_swim_totals",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "All Swim Totals",
                    "value": "all_swim_totals",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Recent Ride Totals",
                    "value": "recent_ride_totals",
                    "schema": {
                        "type": "object",
                        "properties": {
                            "distance": {
                                "type": "number",
                                "title": "Recent Ride Totals.Distance"
                            },
                            "achievement_count": {
                                "type": "number",
                                "title": "Recent Ride Totals.Achievement Count"
                            },
                            "count": {
                                "type": "number",
                                "title": "Recent Ride Totals.Count"
                            },
                            "elapsed_time": {
                                "type": "number",
                                "title": "Recent Ride Totals.Elapsed Time"
                            },
                            "elevation_gain": {
                                "type": "number",
                                "title": "Recent Ride Totals.Elevation Gain"
                            },
                            "moving_time": {
                                "type": "number",
                                "title": "Recent Ride Totals.Moving Time"
                            }
                        }
                    }
                },
                {
                    "label": "Biggest Climb Elevation Gain",
                    "value": "biggest_climb_elevation_gain",
                    "schema": {
                        "type": "number"
                    }
                },
                {
                    "label": "Ytd Ride Totals",
                    "value": "ytd_ride_totals",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "All Ride Totals",
                    "value": "all_ride_totals",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Ytd Run Totals",
                    "value": "ytd_run_totals",
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}