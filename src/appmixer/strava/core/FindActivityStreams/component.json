{
    "name": "appmixer.strava.core.FindActivityStreams",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Retrieve detailed time-series data (streams) for a specific activity such as distance, latlng, and time with flexible output options (Array, Object, First, File).",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:strava"
    },
    "quota": {
        "manager": "appmixer:strava",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "activityId": {
                        "type": "string"
                    },
                    "keys": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "outputType": {
                        "type": "string"
                    }
                },
                "required": ["activityId", "keys"]
            },
            "inspector": {
                "inputs": {
                    "activityId": {
                        "type": "text",
                        "tooltip": "The ID of the activity.",
                        "label": "Activity ID",
                        "index": 1
                    },
                    "keys": {
                        "type": "multiselect",
                        "tooltip": "Select one or more stream types to retrieve for the activity.",
                        "label": "Stream Keys",
                        "index": 2,
                        "options": [
                            {
                                "label": "Time - TimeStream",
                                "value": "time"
                            },
                            {
                                "label": "Distance - DistanceStream",
                                "value": "distance"
                            },
                            {
                                "label": "Lat/Lng - LatLngStream",
                                "value": "latlng"
                            },
                            {
                                "label": "Altitude - AltitudeStream",
                                "value": "altitude"
                            },
                            {
                                "label": "Velocity Smooth - SmoothVelocityStream",
                                "value": "velocity_smooth"
                            },
                            {
                                "label": "Heart Rate - HeartrateStream",
                                "value": "heartrate"
                            },
                            {
                                "label": "Cadence - CadenceStream",
                                "value": "cadence"
                            },
                            {
                                "label": "Watts - PowerStream",
                                "value": "watts"
                            },
                            {
                                "label": "Temperature - TemperatureStream",
                                "value": "temp"
                            },
                            {
                                "label": "Moving - MovingStream",
                                "value": "moving"
                            },
                            {
                                "label": "Grade Smooth - SmoothGradeStream",
                                "value": "grade_smooth"
                            }
                        ]
                    },
                    "outputType": {
                        "type": "select",
                        "label": "Output Type",
                        "index": 3,
                        "defaultValue": "array",
                        "tooltip": "Choose whether you want to receive the result set as one complete list, or first item only or one item at a time or stream the items to a file.",
                        "options": [
                            {
                                "label": "First Item Only",
                                "value": "first"
                            },
                            {
                                "label": "All items at once",
                                "value": "array"
                            },
                            {
                                "label": "One item at a time",
                                "value": "object"
                            },
                            {
                                "label": "Store to CSV file",
                                "value": "file"
                            }
                        ]
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "source": {
                "url": "/component/appmixer/strava/core/FindActivityStreams?outPort=out",
                "data": {
                    "properties": {
                        "generateOutputPortOptions": true
                    },
                    "messages": {
                        "in/outputType": "inputs/in/outputType"
                    }
                }
            }
        },
        {
            "name": "notFound"
            
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}