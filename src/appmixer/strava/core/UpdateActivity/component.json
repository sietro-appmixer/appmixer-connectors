{
    "name": "appmixer.strava.core.UpdateActivity",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Update details of an existing activity such as its name or description.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:strava"
    },
    "quota": {
        "manager": "appmixer:strava",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "activityId": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "sportType": {
                        "type": "string"
                    },
                    "commute": {
                        "type": "boolean"
                    },
                    "trainer": {
                        "type": "boolean"
                    },
                    "hideFromHome": {
                        "type": "boolean"
                    },
                    "gearId": {
                        "type": "string"
                    }
                },
                "required": [
                    "activityId"
                ]
            },
            "inspector": {
                "inputs": {
                    "activityId": {
                        "type": "text",
                        "tooltip": "The ID of the activity to update.",
                        "label": "Activity ID",
                        "index": 1
                    },
                    "name": {
                        "type": "text",
                        "tooltip": "New name for the activity.",
                        "label": "Name",
                        "index": 2
                    },
                    "description": {
                        "type": "text",
                        "tooltip": "New description for the activity.",
                        "label": "Description",
                        "index": 3
                    },
                    "sportType": {
                        "type": "text",
                        "tooltip": "Sport type of activity (e.g., Run, Ride, Swim, Hike). See the <a href=\"https://developers.strava.com/docs/reference/#api-models-SportType\" target=\"_blank\">full list of supported sport types</a> in the Strava API documentation.",
                        "label": "Sport Type",
                        "index": 4
                    },
                    "commute": {
                        "type": "toggle",
                        "tooltip": "Whether this activity is a commute.",
                        "label": "Commute",
                        "defaultValue": false,
                        "index": 5
                    },
                    "trainer": {
                        "type": "toggle",
                        "tooltip": "Whether this activity was recorded on a training machine.",
                        "label": "Trainer",
                        "defaultValue": false,
                        "index": 6
                    },
                    "hideFromHome": {
                        "type": "toggle",
                        "tooltip": "Whether this activity is muted/hidden from home.",
                        "label": "Hide from Home",
                        "defaultValue": false,
                        "index": 7
                    },
                    "gearId": {
                        "type": "text",
                        "tooltip": "Identifier for the gear associated with the activity. Use 'none' to clear gear.",
                        "label": "Gear ID",
                        "index": 8
                    }
                }
            }
        }
    ],
    "outPorts": ["out"],
    "icon": "data:image/svg+xml;base64,"
}