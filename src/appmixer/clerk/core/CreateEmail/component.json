{
    "name": "appmixer.clerk.core.CreateEmail",
    "label": "Create Email",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Associate a new email address with a user account.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:clerk"
    },
    "quota": {
        "manager": "appmixer:clerk",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                },
                "required": ["userId", "email"]
            },
            "inspector": {
                "inputs": {
                    "userId": {
                        "type": "text",
                        "tooltip": "Unique identifier of the user.",
                        "label": "User ID",
                        "index": 0
                    },
                    "email": {
                        "type": "text",
                        "tooltip": "The new email address to add.",
                        "label": "Email",
                        "index": 1
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                {
                    "label": "Email ID",
                    "value": "id",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "User ID",
                    "value": "userId",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Email",
                    "value": "email",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Verified",
                    "value": "verified",
                    "schema": {
                        "type": "boolean"
                    }
                }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}
