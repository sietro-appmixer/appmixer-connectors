{
    "name": "appmixer.clerk.core.UpdateUser",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Update existing user details such as email, name or metadata.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:clerk"
    },
    "quota": {
        "manager": "appmixer:clerk",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "id": { "type": "string" },
                    "email": { "type": "string" },
                    "firstName": { "type": "string" },
                    "lastName": { "type": "string" }
                },
                "required": ["id"]
            },
            "inspector": {
                "inputs": {
                    "id": {
                        "type": "text",
                        "tooltip": "Unique identifier of the user.",
                        "label": "User ID",
                        "index": 0
                    },
                    "email": {
                        "type": "text",
                        "tooltip": "Updated email address.",
                        "label": "Email",
                        "index": 1
                    },
                    "firstName": {
                        "type": "text",
                        "tooltip": "Updated first name.",
                        "label": "First Name",
                        "index": 2
                    },
                    "lastName": {
                        "type": "text",
                        "tooltip": "Updated last name.",
                        "label": "Last Name",
                        "index": 3
                    }
                }
            }
        }
    ],
    "outPorts": ["out"],
    "icon": "data:image/svg+xml;base64,"
}
