{
    "name": "appmixer.servicenow.record.UpdateRecord",
    "author": "Jiří Hofman <jirka@client.io>",
    "description": "Updates the specified record either with the request body or with specific name-value pairs included in the request body.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:servicenow"
    },
    "properties": {
        "schema": {
            "properties": {
                "tableName": { "type": "string" }
            },
            "required": ["tableName"]
        },
        "inspector": {
            "inputs": {
                "tableName": {
                    "type": "text",
                    "label": "Table Name",
                    "index": 1,
                    "tooltip": "Name of the table to retrieve the record from."
                }
            }
        }
    },
    "inPorts": [
        {
            "name": "in",
            "source": {
                "url": "/component/appmixer/servicenow/record/UpdateRecord?outPort=out",
                "data": {
                    "messages": {
                        "in/record_sys_id": "false",
                        "in/sysparm_fields": "inputs/in/sysparm_fields"
                    },
                    "properties": {
                        "generateInspector": true,
                        "tableName": "properties/tableName"
                    }
                }
            },
            "inspector": {
                "inputs": {
                    "record_sys_id": {
                        "type": "text",
                        "label": "Sys ID",
                        "index": 1,
                        "tooltip": "Sys ID of the record to update.",
                        "group": "options"
                    },
                    "sysparm_fields": {
                        "type": "text",
                        "label": "Fields",
                        "index": 2,
                        "tooltip": "A comma-separated list of fields to restrict the generated inputs and limit the properties included in the response. If left empty, it will generate and return all available inputs and properties.",
                        "group": "options"
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "source": {
                "url": "/component/appmixer/servicenow/record/UpdateRecord?outPort=out",
                "data": {
                    "messages": {
                        "in/record_sys_id": "false",
                        "in/sysparm_fields": "inputs/in/sysparm_fields"
                    },
                    "properties": {
                        "generateOutputPortOptions": true,
                        "tableName": "properties/tableName"
                    }
                }
            }
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}
