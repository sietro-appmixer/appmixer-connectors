{
	"name": "appmixer.servicenow.record.UpdatedRecord",
	"author": "Appmixer <info@appmixer.com>",
	"description": "Triggers when a record in the specified table is updated.",
	"version": "1.0.0",
	"webhook": true,
	"trigger": true,
	"auth": {
		"service": "appmixer:servicenow"
	},
	"properties": {
		"schema": {
			"properties": {
				"tableName": {
					"type": "string"
				}
			},
			"required": [
				"tableName"
			]
		},
		"inspector": {
			"inputs": {
				"tableName": {
					"type": "text",
					"label": "Table Name",
					"index": 1,
					"tooltip": "Enter the name of the table to monitor for updated records. Common tables include 'incident', 'change_request', 'problem', 'task', or any custom table name in your ServiceNow instance."
				}
			}
		}
	},
	"outPorts": [
		{
			"name": "out",
			"source": {
				"url": "/component/appmixer/servicenow/record/GetTableSchema?outPort=out",
				"data": {
					"messages": {
						"in/tableName": "properties/tableName"
					},
					"transform": "./transformers#toOutputScheme"
				}
			}
		}
	],
	"icon": "data:image/svg+xml;base64,"
}
