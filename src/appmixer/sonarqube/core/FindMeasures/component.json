{
    "name": "appmixer.sonarqube.core.FindMeasures",
    "label": "Find Measures",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Searches and retrieves measures for projects by providing specific metric keys and project keys. Returns the measure values for the given metrics.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:sonarqube"
    },
    "quota": {
        "manager": "appmixer:sonarqube",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "metricKeys": {
                        "type": "string"
                    },
                    "projectKeys": {
                        "type": "string"
                    }
                },
                "required": ["metricKeys", "projectKeys"]
            },
            "inspector": {
                "inputs": {
                    "metricKeys": {
                        "type": "text",
                        "tooltip": "Comma-separated list of metric keys (required). Example: ncloc,complexity,violations",
                        "label": "Metric Keys",
                        "index": 0
                    },
                    "projectKeys": {
                        "type": "text",
                        "tooltip": "Comma-separated list of project or view keys (required). Example: my_project,another_project",
                        "label": "Project Keys",
                        "index": 1
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                {
                    "label": "Measures",
                    "value": "measures",
                    "schema": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "metric": {
                                    "type": "string",
                                    "title": "Measures.Metric"
                                },
                                "value": {
                                    "type": "string",
                                    "title": "Measures.Value"
                                },
                                "component": {
                                    "type": "string",
                                    "title": "Measures.Component"
                                },
                                "bestValue": {
                                    "type": "boolean",
                                    "title": "Measures.Best Value"
                                }
                            }
                        }
                    }
                }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}
