{
    "name": "appmixer.sonarqube.core.CreateProjectLink",
    "label": "Create Project Link",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Create a new project link. Requires 'Administer' permission on the specified project, or global 'Administer' permission.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:sonarqube"
    },
    "quota": {
        "manager": "appmixer:sonarqube",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "projectId": {
                        "type": "string"
                    },
                    "projectKey": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string"
                    }
                },
                "oneOf": [
                    { "required": ["projectId", "name", "url"] },
					{ "required": ["projectKey", "name", "url"] }
                ]
            },
            "inspector": {
                "inputs": {
                    "name": {
                        "type": "text",
                        "tooltip": "Link name",
                        "label": "Link Name",
                        "index": 0
                    },
                    "projectId": {
                        "type": "text",
                        "tooltip": "Project ID",
                        "label": "Project ID",
                        "index": 1
                    },
                    "projectKey": {
                        "type": "text",
                        "tooltip": "Project key",
                        "label": "Project Key",
                        "index": 2
                    },
                    "url": {
                        "type": "text",
                        "tooltip": "Link URL",
                        "label": "Link URL",
                        "index": 3
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "schema": {
                "type": "object",
                "properties": {
                    "id": { "type": "string", "title": "Link ID" },
                    "name": { "type": "string", "title": "Link Name" },
                    "url": { "type": "string", "title": "Link URL" }
                }
            }
        }
    ],
	"icon": "data:image/svg+xml;base64,"
}
