{
    "name": "appmixer.resend.core.CreateApiKey",
    "label": "Create API Key",
    "description": "Add a new API key to authenticate communications with Resend.",
    "author": "Appmixer <info@appmixer.com>",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:resend"
    },
    "quota": {
        "manager": "appmixer:resend",
        "resources": "requests",
        "maxWait": 2000,
        "scope": {
            "userId": "{{userId}}"
        }
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "permission": {
                        "type": "string",
                        "enum": ["full_access", "sending_access"]
                    },
                    "domain_id": {
                        "type": "string"
                    }
                },
                "required": ["name"]
            },
            "inspector": {
                "inputs": {
                    "name": {
                        "type": "text",
                        "label": "API Key Name",
                        "tooltip": "The API key name.",
                        "index": 0
                    },
                    "permission": {
                        "type": "select",
                        "label": "Permission",
                        "tooltip": "The API key can have full access to Resend's API or be only restricted to send emails.",
                        "options": [
                            {
                                "label": "Full Access",
                                "value": "full_access"
                            },
                            {
                                "label": "Sending Access",
                                "value": "sending_access"
                            }
                        ],
                        "defaultValue": "full_access",
                        "index": 1
                    },
                    "domain_id": {
                        "type": "text",
                        "label": "Domain ID",
                        "tooltip": "Restrict an API key to send emails only from a specific domain. This is only used when the permission is set to sending_access.",
                        "index": 2
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                {
                    "label": "ID",
                    "value": "id",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Token",
                    "value": "token",
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}
