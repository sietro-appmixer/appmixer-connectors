{
    "name": "appmixer.resend.core.UpdateDomain",
    "description": "Update an existing domain in Resend.",
    "author": "Appmixer <info@appmixer.com>",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:resend"
    },
    "quota": {
        "manager": "appmixer:resend",
        "resources": "requests",
        "maxWait": 2000,
        "scope": {
            "userId": "{{userId}}"
        }
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "open_tracking": {
                        "type": "boolean"
                    },
                    "click_tracking": {
                        "type": "boolean"
                    },
                    "tls": {
                        "type": "string",
                        "enum": [
                            "opportunistic",
                            "enforced"
                        ]
                    }
                },
                "required": [
                    "id"
                ]
            },
            "inspector": {
                "inputs": {
                    "id": {
                        "type": "text",
                        "label": "Domain ID",
                        "tooltip": "The Domain ID to update.",
                        "index": 1
                    },
                    "open_tracking": {
                        "type": "toggle",
                        "label": "Open Tracking",
                        "tooltip": "Track the open rate of each email.",
                        "index": 2
                    },
                    "click_tracking": {
                        "type": "toggle",
                        "label": "Click Tracking",
                        "tooltip": "Track clicks within the body of each HTML email.",
                        "index": 3
                    },
                    "tls": {
                        "type": "select",
                        "label": "TLS Mode",
                        "options": [
                            {
                                "label": "Opportunistic",
                                "value": "opportunistic"
                            },
                            {
                                "label": "Enforced",
                                "value": "enforced"
                            }
                        ],
                        "tooltip": "TLS mode for email delivery.",
                        "index": 4
                    }
                }
            }
        }
    ],
    "outPorts": [
        "out"
    ],
    "icon": "data:image/svg+xml;base64,"
}
