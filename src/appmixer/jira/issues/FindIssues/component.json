{
    "name": "appmixer.jira.issues.FindIssues",
    "description": "Find issues by JQL query.",
    "author": "Jimoh Damilola <jimoh@client.io>",
    "auth": {
        "service": "appmixer:jira",
        "scope": [
            "read:jira-work"
        ]
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "query": { "type": "string"},
                    "validateQuery": { "type": "string"},
                    "maxResults": { "type": "number"},
                    "sendWholeArray": { "type": "boolean" }
                },
                "required": ["query"]
            },
            "inspector": {
                "inputs": {
                    "query": {
                        "type": "text",
                        "label": "JQL Query",
                        "tooltip": "JQL query string. <a href=\"https://confluence.atlassian.com/jirasoftwarecloud/advanced-searching-764478330.html\" target=\"_blank\">More about JQL</a>",
                        "index": 1
                    },
                    "validateQuery": {
                        "type": "select",
                        "options": [
                            { "value": "strict", "content": "strict" },
                            { "value": "warn", "content": "warn" },
                            { "value": "none", "content": "none" }
                        ],
                        "defaultValue": "none",
                        "tooltip": "Determines how to validate the JQL query and treat the validation results",
                        "label": "Validate Query",
                        "index": 2
                    },
                    "maxResults": {
                        "type": "number",
                        "label": "Max Results",
                        "tooltip": "The maximum number of items to return. Default value is 50",
                        "index": 3,
                        "min": 1,
                        "max": 100,
                        "step": 1,
                        "defaultValue": 50
                    },
                    "sendWholeArray": {
                        "type": "toggle",
                        "defaultValue": false,
                        "index": 4,
                        "label": "Send all issues at once",
                        "tooltip": "If set to true, all the issues will be sent as an array in a single message, otherwise each issue will be sent in a separate message"
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "issue",
            "source": {
                "url": "/component/appmixer/jira/issues/GenerateIssuesOutput?outPort=out",
                "data": {
                    "properties": {
                        "sendWholeArray": "inputs/in/sendWholeArray"
                    },
                    "transform": "./GenerateIssuesOutput#getOutputOptions"
                }
            }
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}
