{
    "name": "appmixer.jira.issues.GetIssue",
    "description": "Get a selected Issue using its ID.",
    "author": "Jimoh Damilola <jimoh@client.io>",
    "auth": {
        "service": "appmixer:jira",
        "scope": [
            "read:jira-work"
        ]
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "id": { "type": "string" }
                },
                "required": ["id"]
            },
            "inspector": {
                "inputs": {
                    "id": {
                        "type": "text",
                        "label": "Issue ID or Key",
                        "index": 1,
                        "tooltip": "Enter the ID or Key of the issue."
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "issue",
            "source": {
                "url": "/component/appmixer/jira/issues/GenerateIssuesOutput?outPort=out",
                "data": {
                    "transform": "./GenerateIssuesOutput#getOutputOptions"
                }
            }
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}
