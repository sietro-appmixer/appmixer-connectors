{
    "name": "appmixer.kit.subscriber.UpdateSubscriber",
    "label": "Update Subscriber",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Create a new subscriber or update an existing one based on a unique email (upsert behavior).",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:kit"
    },
    "quota": {
        "manager": "appmixer:kit",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "subscriberId": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "firstName": {
                        "type": "string"
                    },
                    "customFields": {
                        "type": "object"
                    }
                },
                "required": ["subscriberId"]
            },
            "inspector": {
                "inputs": {
                    "subscriberId": {
                        "type": "text",
                        "tooltip": "Unique identifier of the subscriber.",
                        "label": "Subscriber ID",
                        "index": 0,
                        "source": {
                            "url": "/component/appmixer/kit/subscriber/FindSubscribers?outPort=out",
                            "data": {
                                "message": {
                                    "in/outputType": "array"
                                },
                                "properties": {
                                    "isSource": true
                                },
                                "transform": "./FindSubscribers#toSelectArray"
                            }
                        }
                    },
                    "email": {
                        "type": "text",
                        "tooltip": "Subscriber's email address.",
                        "label": "Email",
                        "index": 1
                    },
                    "firstName": {
                        "type": "text",
                        "tooltip": "Subscriber's first name.",
                        "label": "First Name",
                        "index": 2
                    },
                    "customFields": {
                        "type": "expression",
                        "label": "Custom Fields",
                        "tooltip": "Key/value pairs for custom subscriber information.",
                        "exclusiveFields": ["name"],
                        "index": 3,
                        "levels": ["ADD"],
                        "fields": {
                            "name": {
                                "type": "select",
                                "label": "Key",
                                "tooltip": "The key to add to the subscriber.",
                                "index": 1,
                                "source": {
                                    "url": "/component/appmixer/kit/customFields/ListCustomFields?outPort=out",
                                    "data": {
                                        "transform": "./ListCustomFields#toSelectArray"
                                    }
                                }
                            },
                            "value": {
                                "type": "text",
                                "label": "Value",
                                "tooltip": "The value for the field.",
                                "index": 2
                            }
                        }
                    }
                }
            }
        }
    ],
    "outPorts": ["out"],
    "icon": "data:image/png;base64,"
}
