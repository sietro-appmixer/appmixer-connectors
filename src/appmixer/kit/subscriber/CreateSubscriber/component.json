{
    "name": "appmixer.kit.subscriber.CreateSubscriber",
    "label": "Create Subscriber",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Create a new subscriber or update an existing one based on a unique email (upsert behavior).",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:kit"
    },
    "quota": {
        "manager": "appmixer:kit",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "firstName": {
                        "type": "string"
                    },
                    "state": {
                        "type": "string"
                    },
                    "customFields": {
                        "type": "string"
                    }
                },
                "required": ["email"]
            },
            "inspector": {
                "inputs": {
                    "email": {
                        "type": "text",
                        "tooltip": "Subscriber's email address.",
                        "label": "Email",
                        "index": 0
                    },
                    "firstName": {
                        "type": "text",
                        "tooltip": "Subscriber's first name.",
                        "label": "First Name",
                        "index": 1
                    },
                    "state": {
                        "type": "select",
                        "tooltip": "Create subscriber in this state.",
                        "label": "State",
                        "index": 2,
                        "options": [
                            {
                                "label": "Active (Default)",
                                "value": "active"
                            },
                            {
                                "label": "Bounced",
                                "value": "bounced"
                            },
                            {
                                "label": "Cancelled",
                                "value": "cancelled"
                            },
                            {
                                "label": "Complained",
                                "value": "complained"
                            },
                            {
                                "label": "Inactive",
                                "value": "inactive"
                            }
                        ]
                    },
                    "customFields": {
                        "type": "key-value",
                        "tooltip": "Optional key/value pairs for custom subscriber information.",
                        "label": "Custom Fields",
                        "index": 3
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                {
                    "label": "Subscriber ID",
                    "value": "id",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "First Name",
                    "value": "first_name",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Email Address",
                    "value": "email_address",
                    "schema": {
                        "type": "string"
                    }
                },

                {
                    "label": "State",
                    "value": "state",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Created At",
                    "value": "created_at",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Custom Fields",
                    "value": "fields",
                    "schema": {
                        "type": "object"
                    }
                }
            ]
        }
    ],
    "icon": "data:image/png;base64,"
}
