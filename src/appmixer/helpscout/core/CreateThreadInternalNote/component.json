{
    "name": "appmixer.helpscout.core.CreateThreadInternalNote",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Add a private internal note to a conversation with optional attachments and status change.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:helpscout"
    },
    "quota": {
        "manager": "appmixer:helpscout",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "text": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    },
                    "imported": {
                        "type": "boolean"
                    }
                },
                "required": ["id", "text"]
            },
            "inspector": {
                "inputs": {
                    "id": {
                        "type": "number",
                        "tooltip": "Conversation ID where the note will be added.",
                        "label": "Conversation ID",
                        "index": 1
                    },
                    "text": {
                        "type": "textarea",
                        "tooltip": "The note text content.",
                        "label": "Note Text",
                        "index": 2
                    },
                    "status": {
                        "type": "select",
                        "tooltip": "Use this field to change conversation status when adding the note.",
                        "label": "Conversation Status",
                        "index": 4,
                        "options": [
                            { "clearItem": true, "content": "-- Clear selection --" },
                            {
                                "label": "Active",
                                "value": "active"
                            },
                            {
                                "label": "All",
                                "value": "all"
                            },
                            {
                                "label": "Closed",
                                "value": "closed"
                            },
                            {
                                "label": "Open",
                                "value": "open"
                            },
                            {
                                "label": "Pending",
                                "value": "pending"
                            },
                            {
                                "label": "Spam",
                                "value": "spam"
                            }
                        ]
                    },
                    "imported": {
                        "type": "toggle",
                        "tooltip": "When true, enables note to be created for historical purposes. No outgoing emails or notifications will be generated.",
                        "label": "Imported (Historical)",
                        "index": 5,
                        "defaultValue": false
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                {
                    "label": "Note ID",
                    "value": "Resource-ID",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Created Date",
                    "value": "Date",
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}