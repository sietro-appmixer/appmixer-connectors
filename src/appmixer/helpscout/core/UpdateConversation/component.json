{
    "name": "appmixer.helpscout.core.UpdateConversation",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Update conversation properties such as subject, status, assignee, tags and other fields via validated JSON Patch operations.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:helpscout"
    },
    "quota": {
        "manager": "appmixer:helpscout",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "subject": {
                        "type": "string"
                    },
                    "primaryCustomerId": {
                        "type": "integer"
                    },
                    "draft": {
                        "type": "boolean"
                    },
                    "mailboxId": {
                        "type": "integer"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "active",
                            "pending",
                            "closed"
                        ]
                    },
                    "assignToId": {
                        "type": "integer"
                    },
                    "unassign": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "id"
                ]
            },
            "inspector": {
                "inputs": {
                    "id": {
                        "type": "number",
                        "tooltip": "Conversation ID.",
                        "label": "Conversation ID",
                        "index": 0
                    },
                    "subject": {
                        "type": "text",
                        "tooltip": "Replace subject (string).",
                        "label": "Subject",
                        "index": 1
                    },
                    "primaryCustomerId": {
                        "type": "number",
                        "tooltip": "Set primary customer by ID.",
                        "label": "Primary Customer ID",
                        "index": 2
                    },
                    "draft": {
                        "type": "toggle",
                        "tooltip": "Publish/unpublish draft.",
                        "label": "Draft",
                        "index": 3
                    },
                    "mailboxId": {
                        "type": "number",
                        "tooltip": "Move conversation to mailbox (provide mailbox id).",
                        "label": "Mailbox ID",
                        "index": 4
                    },
                    "status": {
                        "type": "select",
                        "tooltip": "Conversation status.",
                        "label": "Status",
                        "index": 5,
                        "options": [
                            { "clearItem": true, "content": "-- Clear selection --" },
                            {
                                "label": "active",
                                "value": "active"
                            },
                            {
                                "label": "pending",
                                "value": "pending"
                            },
                            {
                                "label": "closed",
                                "value": "closed"
                            }
                        ]
                    },
                    "assignToId": {
                        "type": "number",
                        "tooltip": "Assignee ID. Provide the user ID to assign the conversation (when Unassign is off) or the same user ID to remove as owner (when Unassign is on). When Unassign is enabled this field is required.",
                        "label": "Assignee ID (required when Unassign is true)",
                        "index": 6
                    },
                    "unassign": {
                        "type": "toggle",
                        "tooltip": "If true, removes assignee from conversation.",
                        "label": "Unassign",
                        "index": 8
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": []
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}