{
    "name": "appmixer.helpscout.core.CreateConversation",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Create a new email conversation in a mailbox using an existing customer ID.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:helpscout"
    },
    "quota": {
        "manager": "appmixer:helpscout",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "mailboxId": {
                        "type": "string"
                    },
                    "subject": {
                        "type": "string"
                    },
                    "customerId": {
                        "type": "integer"
                    },
                    "threadsType": {
                        "type": "string"
                    },
                    "threadsText": {
                        "type": "string"
                    },
                    "tags": {
                        "type": [
                            "array",
                            "string"
                        ]
                    },
                    "status": {
                        "type": "string"
                    }
                },
                "required": [
                    "mailboxId",
                    "subject",
                    "threadsText",
                    "type",
                    "status",
                    "customerId"
                ]
            },
            "inspector": {
                "inputs": {
                    "type": {
                        "type": "select",
                        "tooltip": "Conversation type.",
                        "label": "Type",
                        "index": 0,
                        "default": "email",
                        "options": [
                            { "clearItem": true, "content": "-- Clear selection --" },
                            {
                                "label": "Email",
                                "value": "email"
                            },
                            {
                                "label": "Chat",
                                "value": "chat"
                            },
                            {
                                "label": "Phone",
                                "value": "phone"
                            }
                        ]
                    },
                    "mailboxId": {
                        "type": "number",
                        "tooltip": "Mailbox ID where the conversation will be created.",
                        "label": "Mailbox ID",
                        "index": 1
                    },
                    "subject": {
                        "type": "text",
                        "tooltip": "Subject line.",
                        "label": "Subject",
                        "index": 2
                    },
                    "customerId": {
                        "type": "number",
                        "tooltip": "ID of an existing customer in HelpScout.",
                        "label": "Customer ID",
                        "index": 3
                    },
                    "threadsType": {
                        "type": "select",
                        "tooltip": "Thread type - the type of message or interaction being created.",
                        "label": "Threads Type",
                        "index": 4,
                        "default": "customer",
                        "options": [
                            { "clearItem": true, "content": "-- Clear selection --" },
                            {
                                "label": "Customer Message",
                                "value": "customer"
                            },
                            {
                                "label": "Agent Reply",
                                "value": "reply"
                            },
                            {
                                "label": "Private Note",
                                "value": "note"
                            },
                            {
                                "label": "Phone Call Log",
                                "value": "phone"
                            },
                            {
                                "label": "Chat Message",
                                "value": "chat"
                            }
                        ]
                    },
                    "threadsText": {
                        "type": "text",
                        "tooltip": "Body of the message.",
                        "label": "Message",
                        "index": 5
                    },
                    "tags": {
                        "type": "multiselect",
                        "tooltip": "Tags to associate with the conversation.",
                        "label": "Tags",
                        "index": 6,
                        "source": {
                            "url": "/component/appmixer/helpscout/core/ListTags?outPort=out",
                            "data": {
                                "transform": "./ListTags#tagsToSelectArray",
                                "properties": {
                                    "isSource": true
                                }
                            }
                        }
                    },
                    "status": {
                        "type": "select",
                        "tooltip": "Conversation status.",
                        "label": "Status",
                        "index": 7,
                        "default": "active",
                        "options": [
                            { "clearItem": true, "content": "-- Clear selection --" },
                            {
                                "label": "Active",
                                "value": "active"
                            },
                            {
                                "label": "Closed",
                                "value": "closed"
                            },
                            {
                                "label": "Pending",
                                "value": "pending"
                            }
                        ]
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                {
                    "label": "Conversation Location",
                    "value": "Location",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Conversation ID",
                    "value": "Resource-ID",
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}