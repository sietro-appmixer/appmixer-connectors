{
    "name": "appmixer.klaviyo.campaign.CreateCampaign",
    "description": "Create a new campaign with specified details including name, channel filter, audiences, and send strategy.",
    "author": "Appmixer <info@appmixer.com>",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:klaviyo"
    },
    "quota": {
        "manager": "appmixer:klaviyo",
        "resources": "ten-requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "channelFilter": {
                        "type": "string",
                        "enum": ["email", "sms", "mobile_push"]
                    },
                    "audiencesIncluded": {
                        "type": "object"
                    },
                    "audiencesExcluded": {
                        "type": "object"
                    },
                    "sendStrategyMethod": {
                        "type": "string",
                        "enum": ["static", "throttled", "immediate", "smart_send_time"]
                    },
                    "staticDatetime": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "staticIsLocal": {
                        "type": "boolean"
                    },
                    "staticSendPastRecipientsImmediately": {
                        "type": "boolean"
                    },
                    "throttledDatetime": {
                        "type": "string"
                    },
                    "throttlePercentage": {
                        "type": "number",
                        "enum": [10, 11, 13, 14, 17, 20, 25, 33, 50]
                    },
                    "stoDate": {
                        "type": "string"
                    }
                },
                "required": [
                    "name", "channelFilter", "audiencesIncluded", "sendStrategyMethod"
                ],
                "if": {
                    "properties": {
                        "sendStrategyMethod": { "const": "immediate" }
                    }
                },
                "then": { "required": [] },
                "else": {
                    "anyOf": [
                        { "required": ["staticDatetime"] },
                        { "required": ["throttledDatetime","throttlePercentage"] },
                        { "required": ["stoDate"] }
                    ]
                }
            },
            "inspector": {
                "inputs": {
                    "name": {
                        "type": "text",
                        "label": "Campaign Name",
                        "index": 0,
                        "tooltip": "The name of the campaign"
                    },
                    "channelFilter": {
                        "type": "select",
                        "label": "Channel Filter",
                        "index": 1,
                        "tooltip": "The channel type for the campaign",
                        "options": [
                            { "label": "Email", "value": "email" },
                            { "label": "SMS", "value": "sms" },
                            { "label": "Mobile Push", "value": "mobile_push" }
                        ]
                    },
                    "audiencesIncluded": {
                        "type": "expression",
                        "label": "Included Audiences",
                        "index": 2,
                        "tooltip": "Array of audiences to include in the campaign. Each item should have 'type' (List or Segment) and 'id' properties.",
                        "levels": ["ADD"],
                        "fields": {
                            "type": {
                                "required": true,
                                "type": "select",
                                "label": "Type",
                                "options": [
                                    {
                                        "value": "list",
                                        "label": "List"
                                    },
                                    {
                                        "value": "segment",
                                        "label": "Segment"
                                    }
                                ]
                            },
                            "listId": {
                                "type": "text",
                                "label": "List ID",
                                "when": {
                                    "eq": {
                                        "./type": "list"
                                    }
                                },
                                "required": true,
                                "source": {
                                    "url": "/component/appmixer/klaviyo/list/FindLists?outPort=out",
                                    "data": {
                                        "message": {
                                            "in/outputType": "array"
                                        },
                                        "properties": {
                                            "isSource": true
                                        },
                                        "transform": "./FindLists#toSelectArray"
                                    }
                                }
                            },
                            "segmentId": {
                                "type": "text",
                                "label": "Segment ID",
                                "when": {
                                    "eq": {
                                        "./type": "segment"
                                    }
                                },
                                "required": true,
                                "source": {
                                    "url": "/component/appmixer/klaviyo/segment/FindSegments?outPort=out",
                                    "data": {
                                        "message": {
                                            "in/outputType": "array"
                                        },
                                        "properties": {
                                            "isSource": true
                                        },
                                        "transform": "./FindSegments#toSelectArray"
                                    }
                                }
                            }
                        }
                    },
                    "audiencesExcluded": {
                        "type": "expression",
                        "label": "Excluded Audiences",
                        "index": 3,
                        "tooltip": "Array of audiences to exclude in the campaign. Each item should have 'type' (List or Segment) and 'id' properties.",
                        "levels": ["ADD"],
                        "fields": {
                            "type": {
                                "type": "select",
                                "label": "Type",
                                "options": [
                                    { "clearItem": true, "label": "<Empty>" },
                                    {
                                        "value": "list",
                                        "label": "List"
                                    },
                                    {
                                        "value": "segment",
                                        "label": "Segment"
                                    }
                                ]
                            },
                            "listId": {
                                "type": "text",
                                "label": "List ID",
                                "when": {
                                    "eq": {
                                        "./type": "list"
                                    }
                                },
                                "required": true,
                                "source": {
                                    "url": "/component/appmixer/klaviyo/list/FindLists?outPort=out",
                                    "data": {
                                        "message": {
                                            "in/outputType": "array"
                                        },
                                        "properties": {
                                            "isSource": true
                                        },
                                        "transform": "./FindLists#toSelectArray"
                                    }
                                }
                            },
                            "segmentId": {
                                "type": "text",
                                "label": "Segment ID",
                                "when": {
                                    "eq": {
                                        "./type": "segment"
                                    }
                                },
                                "required": true,
                                "source": {
                                    "url": "/component/appmixer/klaviyo/segment/FindSegments?outPort=out",
                                    "data": {
                                        "message": {
                                            "in/outputType": "array"
                                        },
                                        "properties": {
                                            "isSource": true
                                        },
                                        "transform": "./FindSegments#toSelectArray"
                                    }
                                }
                            }
                        }
                    },
                    "sendStrategyMethod": {
                        "type": "select",
                        "label": "Send Strategy Method",
                        "index": 4,
                        "tooltip": "The method for sending the campaign",
                        "options": [
                            { "label": "Static", "value": "static" },
                            { "label": "Throttled", "value": "throttled" },
                            { "label": "Immediate", "value": "immediate" },
                            { "label": "Smart Send Time", "value": "smart_send_time" }
                        ]
                    },
                    "staticDatetime": {
                        "type": "date-time",
                        "label": "Static Send Date/Time",
                        "index": 6,
                        "when": {
                            "eq": {
                                "./sendStrategyMethod": "static"
                            }
                        }
                    },
                    "staticIsLocal": {
                        "type": "toggle",
                        "label": "Use Local Time",
                        "tooltip": "Whether the campaign should be sent with local recipient timezone send (requires UTC time) or statically sent at the given time.",
                        "index": 5,
                        "when": {
                            "eq": {
                                "./sendStrategyMethod": "static"
                            }
                        }
                    },
                    "staticSendPastRecipientsImmediately": {
                        "type": "toggle",
                        "label": "Send Past Recipients Immediately",
                        "index": 6,
                        "tooltip": "Whether to send to past recipients immediately",
                        "when": {
                            "eq": {
                                "./sendStrategyMethod": "static"
                            }
                        }
                    },
                    "throttledDatetime": {
                        "type": "date-time",
                        "label": "Throttled Send Date/Time",
                        "index": 7,
                        "tooltip": "The date and time to start throttled sending",
                        "when": {
                            "eq": {
                                "./sendStrategyMethod": "throttled"
                            }
                        }
                    },
                    "throttlePercentage": {
                        "type": "select",
                        "label": "Throttle Percentage",
                        "index": 8,
                        "tooltip": "The percentage to throttle the sending",
                        "options": [
                            { "label": "10%", "value": 10 },
                            { "label": "11%", "value": 11 },
                            { "label": "13%", "value": 13 },
                            { "label": "14%", "value": 14 },
                            { "label": "17%", "value": 17 },
                            { "label": "20%", "value": 20 },
                            { "label": "25%", "value": 25 },
                            { "label": "33%", "value": 33 },
                            { "label": "50%", "value": 50 }
                        ],
                        "when": {
                            "eq": {
                                "./sendStrategyMethod": "throttled"
                            }
                        }
                    },
                    "stoDate": {
                        "type": "date-time",
                        "label": "Smart Send Time Date",
                        "index": 9,
                        "tooltip": "The date for smart send time optimization",
                        "when": {
                            "eq": {
                                "./sendStrategyMethod": "smart_send_time"
                            }
                        }                        
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                { "label": "Type", "value": "type", "schema": { "type": "string" } },
                { "label": "Campaign ID", "value": "id", "schema": { "type": "string" } },
                { "label": "Attributes.Name", "value": "attributes.name", "schema": { "type": "string" } },
                { "label": "Attributes.Status", "value": "attributes.status", "schema": { "type": "string" } },
                { "label": "Attributes.Archived", "value": "attributes.archived", "schema": { "type": "boolean" } },
                { "label": "Attributes.Audiences.Included", "value": "attributes.audiences.included", "schema": { "type": "array", "items": { "type": "string" } } },
                { "label": "Attributes.Audiences.Excluded", "value": "attributes.audiences.excluded", "schema": { "type": "array", "items": { "type": "string" } } },
                { "label": "Attributes.Send Options.Use Smart Sending", "value": "attributes.send_options.use_smart_sending", "schema": { "type": "boolean" } },
                { "label": "Attributes.Send Options.Ignore Unsubscribes", "value": "attributes.send_options.ignore_unsubscribes", "schema": { "type": "boolean" } },
                { "label": "Attributes.Tracking Options.Add Tracking Params", "value": "attributes.tracking_options.add_tracking_params", "schema": { "type": "boolean" } },
                { "label": "Attributes.Tracking Options.Custom Tracking Params", "value": "attributes.tracking_options.custom_tracking_params", "schema": { "type": "array", "items": { "type": "string" } } },
                { "label": "Attributes.Tracking Options.Is Tracking Clicks", "value": "attributes.tracking_options.is_tracking_clicks", "schema": { "type": "boolean" } },
                { "label": "Attributes.Tracking Options.Is Tracking Opens", "value": "attributes.tracking_options.is_tracking_opens", "schema": { "type": "boolean" } },
                { "label": "Attributes.Send Strategy.Method", "value": "attributes.send_strategy.method", "schema": { "type": "string" } },
                { "label": "Attributes.Send Strategy.Datetime", "value": "attributes.send_strategy.datetime", "schema": { "type": "string", "format": "date-time" } },
                { "label": "Attributes.Send Strategy.Throttle Percentage", "value": "attributes.send_strategy.throttle_percentage", "schema": { "type": "number" } },
                { "label": "Attributes.Created At", "value": "attributes.created_at", "schema": { "type": "string", "format": "date-time" } },
                { "label": "Attributes.Scheduled At", "value": "attributes.scheduled_at", "schema": { "type": "string", "format": "date-time" } },
                { "label": "Attributes.Updated At", "value": "attributes.updated_at", "schema": { "type": "string", "format": "date-time" } },
                { "label": "Attributes.Send Time", "value": "attributes.send_time", "schema": { "type": "string", "format": "date-time" } },
                { "label": "Relationships.Campaign Messages.Data", "value": "relationships.campaign-messages.data", "schema": { "type": "array", "items": { "type": "object" } } },
                { "label": "Links.Self", "value": "links.self", "schema": { "type": "string" } }
            ]
        }
    ],
    "icon": "data:image/png;base64,"
}
