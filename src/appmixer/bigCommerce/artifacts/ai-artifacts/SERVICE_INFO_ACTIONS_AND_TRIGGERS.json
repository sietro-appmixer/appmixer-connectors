            "endpointUrl": "/v3/customers/{customer_id}",
            "apiBaseUrl": "https://api.bigcommerce.com/stores/{store_hash}/",
            "method": "GET",
            "sampleResponse": {
                "id": 501,
                "email": "customer@example.com",
                "first_name": "Jane",
                "last_name": "Doe"
            },
            "inputSchema": {
                "type": "object",
                "properties": {
                    "customer_id": {
                        "type": "number",
                        "description": "Unique identifier for the customer."
                    }
                }
            },
            "outputType": {
                "outputType": "object"
            }
        },
        {
            "title": "Create Customer",
            "description": "Create a new customer by providing key details such as email, first name, last name, and phone number. Additional information like addresses and company can be provided optionally.",
            "type": "action",
            "documentation": "https://developer.bigcommerce.com/api-reference/store-management/customers-v3/customers/createcustomers",
            "endpointUrl": "/v3/customers",
            "apiBaseUrl": "https://api.bigcommerce.com/stores/{store_hash}/",
            "method": "POST",
            "sampleResponse": {
                "data": {
                    "id": 502,
                    "email": "newcustomer@example.com"
                }
            },
            "inputSchema": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "The customer's email address."
                    },
                    "first_name": {
                        "type": "string",
                        "description": "The customer's first name."
                    },
                    "last_name": {
                        "type": "string",
                        "description": "The customer's last name."
                    },
                    "phone": {
                        "type": "string",
                        "description": "The customer's phone number."
                    },
                    "addresses": {
                        "type": "array",
                        "description": "Optional list of addresses for the customer.",
                        "items": {
                            "type": "object",
                            "properties": {
                                "street_1": {
                                    "type": "string",
                                    "description": "Primary street address."
                                },
                                "city": {
                                    "type": "string",
                                    "description": "City name."
                                },
                                "state": {
                                    "type": "string",
                                    "description": "State or province."
                                },
                                "zip": {
                                    "type": "string",
                                    "description": "Postal code."
                                },
                                "country": {
                                    "type": "string",
                                    "description": "Country name."
                                }
                            }
                        }
                    },
                    "company": {
                        "type": "string",
                        "description": "Company name (if applicable)."
                    }
                }
            },
            "outputType": {
                "outputType": "object"
            }
        },
