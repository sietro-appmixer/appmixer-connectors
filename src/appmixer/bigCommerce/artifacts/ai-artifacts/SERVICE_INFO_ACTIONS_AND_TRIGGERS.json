        {
            "title": "Find Orders",
            "description": "Search orders using filters such as status, creation date range, customer ID, or email. Returns a maximum of 250 orders. Pagination parameters are omitted.",
            "type": "action",
            "documentation": "https://developer.bigcommerce.com/api-reference/store-management/orders/orders/getorders",
            "endpointUrl": "/v2/orders",
            "apiBaseUrl": "https://api.bigcommerce.com/stores/{store_hash}/",
            "method": "GET",
            "sampleResponse": {
                "data": [
                    {
                        "id": 601,
                        "status_id": 1,
                        "total_inc_tax": "59.99"
                    }
                ]
            },
            "inputSchema": {
                "type": "object",
                "properties": {
                    "query": {
                        "type": "string",
                        "description": "Search term to filter orders by customer email or other criteria."
                    },
                    "status_id": {
                        "type": "number",
                        "description": "Filter orders by their status identifier."
                    },
                    "min_date_created": {
                        "type": "string",
                        "description": "ISO8601 date to filter orders created after this time."
                    },
                    "max_date_created": {
                        "type": "string",
                        "description": "ISO8601 date to filter orders created before this time."
                    }
                }
            },
            "outputType": {
                "outputType": "array",
                "arrayPropertyValue": "data"
            }
        }
