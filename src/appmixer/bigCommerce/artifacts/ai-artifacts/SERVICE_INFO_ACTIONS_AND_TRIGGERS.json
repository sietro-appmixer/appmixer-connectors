{
    "actions": [
        {
            "title": "Find Products",
            "description": "Search products by common filters (such as name, SKU, visibility, and modification date range) and return a maximum of 250 results. Pagination parameters are omitted.",
            "type": "action",
            "documentation": "https://developer.bigcommerce.com/api-reference/store-management/catalog/products/getproducts",
            "endpointUrl": "/v3/catalog/products",
            "apiBaseUrl": "https://api.bigcommerce.com/stores/{store_hash}/",
            "method": "GET",
            "sampleResponse": {
                "data": [
                    {
                        "id": 1001,
                        "name": "Example Product",
                        "sku": "SKU-EXAMPLE",
                        "price": "29.99",
                        "is_visible": true
                    }
                ]
            },
            "inputSchema": {
                "type": "object",
                "properties": {
                    "query": {
                        "type": "string",
                        "description": "Search term to filter products by name or SKU."
                    },
                    "is_visible": {
                        "type": "boolean",
                        "description": "Filter products based on their visibility status."
                    },
                    "date_modified_start": {
                        "type": "string",
                        "description": "ISO8601 date to filter products modified after this date."
                    },
                    "date_modified_end": {
                        "type": "string",
                        "description": "ISO8601 date to filter products modified before this date."
                    }
                }
            },
            "outputType": {
                "outputType": "array",
                "arrayPropertyValue": "data"
            }
        },
        {
            "title": "Get Product",
            "description": "Retrieve detailed information for a single product using its product ID. The product ID is usually obtained via the Find Products action.",
            "type": "action",
            "documentation": "https://developer.bigcommerce.com/api-reference/store-management/catalog/products/getproductbyid",
            "endpointUrl": "/v3/catalog/products/{product_id}",
            "apiBaseUrl": "https://api.bigcommerce.com/stores/{store_hash}/",
            "method": "GET",
            "sampleResponse": {
                "id": 1001,
                "name": "Example Product",
                "sku": "SKU-EXAMPLE",
                "price": "29.99",
                "is_visible": true
            },
            "inputSchema": {
                "type": "object",
                "properties": {
                    "product_id": {
                        "type": "number",
                        "description": "Unique identifier for the product."
                    }
                }
            },
            "outputType": {
                "outputType": "object"
            }
        },
        {
            "title": "Create Product",
            "description": "Create a new product by specifying details like name, SKU, price, type, weight, categories, and visibility. Returns the newly created product.",
            "type": "action",
            "documentation": "https://developer.bigcommerce.com/api-reference/store-management/catalog/products/createproduct",
            "endpointUrl": "/v3/catalog/products",
            "apiBaseUrl": "https://api.bigcommerce.com/stores/{store_hash}/",
            "method": "POST",
            "sampleResponse": {
                "data": {
                    "id": 1002,
                    "name": "New Product",
                    "sku": "SKU-NEW"
                }
            },
            "inputSchema": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the product."
                    },
                    "type": {
                        "type": "string",
                        "description": "Product type (e.g., physical or digital)."
                    },
                    "price": {
                        "type": "number",
                        "description": "Price of the product."
                    },
                    "sku": {
                        "type": "string",
                        "description": "Unique SKU for inventory tracking."
                    },
                    "weight": {
                        "type": "number",
                        "description": "Weight of the product, applicable for shipping."
                    },
                    "categories": {
                        "type": "array",
                        "description": "List of category IDs the product belongs to.",
                        "items": {
                            "type": "number"
                        }
                    },
                    "description": {
                        "type": "string",
                        "description": "Product description."
                    },
                    "is_visible": {
                        "type": "boolean",
                        "description": "Visibility status of the product."
                    }
                }
            },
            "outputType": {
                "outputType": "object"
            }
        },
        {
            "title": "Update Product",
            "description": "Update an existing product identified by its product ID. Use this endpoint to modify details like name, price, or visibility among others.",
            "type": "action",
            "documentation": "https://developer.bigcommerce.com/api-reference/store-management/catalog/products/updateproduct",
            "endpointUrl": "/v3/catalog/products/{product_id}",
            "apiBaseUrl": "https://api.bigcommerce.com/stores/{store_hash}/",
            "method": "PUT",
            "sampleResponse": {},
            "inputSchema": {
                "type": "object",
                "properties": {
                    "product_id": {
                        "type": "number",
                        "description": "Unique identifier for the product to update."
                    },
                    "name": {
                        "type": "string",
                        "description": "Updated product name."
                    },
                    "price": {
                        "type": "number",
                        "description": "Updated product price."
                    },
                    "is_visible": {
                        "type": "boolean",
                        "description": "Updated visibility status."
                    }
                }
            },
            "outputType": {
                "outputType": "object"
            }
        },
        {
            "title": "Delete Product",
            "description": "Delete a product by its product ID. This action permanently removes the product from the store.",
            "type": "action",
            "documentation": "https://developer.bigcommerce.com/api-reference/store-management/catalog/products/deleteproduct",
            "endpointUrl": "/v3/catalog/products/{product_id}",
            "apiBaseUrl": "https://api.bigcommerce.com/stores/{store_hash}/",
            "method": "DELETE",
            "sampleResponse": {},
            "inputSchema": {
                "type": "object",
                "properties": {
                    "product_id": {
                        "type": "number",
                        "description": "Unique identifier for the product to be deleted."
                    }
                }
            },
            "outputType": {
                "outputType": "object"
            }
        },
        {
            "title": "Find Customers",
            "description": "Search customers by filters such as email, name, or creation date. Returns a maximum of 250 matched customer records.",
            "type": "action",
            "documentation": "https://developer.bigcommerce.com/api-reference/store-management/customers-v3/customers/getcustomers",
            "endpointUrl": "/v3/customers",
            "apiBaseUrl": "https://api.bigcommerce.com/stores/{store_hash}/",
            "method": "GET",
            "sampleResponse": {
                "data": [
                    {
                        "id": 501,
                        "email": "customer@example.com",
                        "first_name": "Jane",
                        "last_name": "Doe"
                    }
                ]
            },
            "inputSchema": {
                "type": "object",
                "properties": {
                    "query": {
                        "type": "string",
                        "description": "Search term to filter customers by name or email."
                    },
                    "date_created_start": {
                        "type": "string",
                        "description": "ISO8601 date to filter customers created after this date."
                    },
                    "date_created_end": {
                        "type": "string",
                        "description": "ISO8601 date to filter customers created before this date."
                    }
                }
            },
            "outputType": {
                "outputType": "array",
                "arrayPropertyValue": "data"
            }
        },
        {
            "title": "Get Customer",
