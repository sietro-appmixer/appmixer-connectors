{
    "name": "appmixer.bigCommerce.core.CreateProduct",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Create a new product.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:bigCommerce"
    },
    "quota": {
        "manager": "appmixer:bigCommerce",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "maxLength": 250
                    },
                    "type": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number",
                        "minimum": 0
                    },
                    "weight": {
                        "type": "number",
                        "minimum": 0
                    },
                    "sku": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "is_visible": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "name",
                    "type",
                    "weight",
                    "price"
                ]
            },
            "inspector": {
                "inputs": {
                    "name": {
                        "type": "text",
                        "tooltip": "Name of the product (max 250 characters).",
                        "label": "Name",
                        "index": 0
                    },
                    "type": {
                        "type": "select",
                        "tooltip": "Product type.",
                        "label": "Type",
                        "index": 1,
                        "options": [
                            {
                                "label": "Physical",
                                "value": "physical"
                            },
                            {
                                "label": "Digital",
                                "value": "digital"
                            }
                        ]
                    },
                    "price": {
                        "type": "number",
                        "tooltip": "Price of the product.",
                        "defaultValue": 0,
                        "label": "Price",
                        "index": 2
                    },
                    "weight": {
                        "type": "number",
                        "tooltip": "Weight of the product, applicable for shipping.",
                        "defaultValue": 0,
                        "label": "Weight",
                        "index": 3
                    },
                    "sku": {
                        "type": "text",
                        "tooltip": "Unique SKU for inventory tracking.",
                        "label": "Sku",
                        "index": 4
                    },
                    "description": {
                        "type": "textarea",
                        "tooltip": "Product description.",
                        "label": "Description",
                        "index": 5
                    },
                    "is_visible": {
                        "type": "toggle",
                        "tooltip": "Visibility status of the product.",
                        "label": "Is Visible",
                        "index": 6
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                {
                    "label": "Product Id",
                    "value": "id",
                    "schema": {
                        "type": "number"
                    }
                },
                {
                    "label": "Name",
                    "value": "name",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Type",
                    "value": "type",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Sku",
                    "value": "sku",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Description",
                    "value": "description",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Weight",
                    "value": "weight",
                    "schema": {
                        "type": "number"
                    }
                },
                {
                    "label": "Price",
                    "value": "price",
                    "schema": {
                        "type": "number"
                    }
                },
                {
                    "label": "Is Visible",
                    "value": "is_visible",
                    "schema": {
                        "type": "boolean"
                    }
                }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}