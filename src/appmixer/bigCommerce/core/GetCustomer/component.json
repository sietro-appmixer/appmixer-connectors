{
    "name": "appmixer.bigCommerce.core.GetCustomer",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Retrieve detailed information for a single customer using their customer ID. The customer ID can be obtained from the Find Customers action.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:bigCommerce"
    },
    "quota": {
        "manager": "appmixer:bigCommerce",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "customer_id": {
                        "type": "number"
                    }
                },
                "required": [
                    "customer_id"
                ]
            },
            "inspector": {
                "inputs": {
                    "customer_id": {
                        "type": "number",
                        "tooltip": "Unique identifier for the customer.",
                        "label": "Customer Id",
                        "index": 0
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                {
                    "label": "Authentication",
                    "value": "_authentication",
                    "schema": {
                        "type": "object",
                        "properties": {
                            "force_reset": {
                                "type": "boolean",
                                "title": "Authentication.Force Reset"
                            },
                            "password": {
                                "type": "string",
                                "title": "Authentication.Password"
                            },
                            "password_confirmation": {
                                "type": "string",
                                "title": "Authentication.Password Confirmation"
                            }
                        }
                    }
                },
                {
                    "label": "Company",
                    "value": "company",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "First Name",
                    "value": "first_name",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Last Name",
                    "value": "last_name",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Email",
                    "value": "email",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Phone",
                    "value": "phone",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Store Credit",
                    "value": "store_credit",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Registration Ip Address",
                    "value": "registration_ip_address",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Customer Group Id",
                    "value": "customer_group_id",
                    "schema": {
                        "type": "number"
                    }
                },
                {
                    "label": "Notes",
                    "value": "notes",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Tax Exempt Category",
                    "value": "tax_exempt_category",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Addresses",
                    "value": "addresses",
                    "schema": {
                        "type": "object",
                        "properties": {
                            "url": {
                                "type": "string",
                                "title": "Addresses.Url"
                            },
                            "resource": {
                                "type": "string",
                                "title": "Addresses.Resource"
                            }
                        }
                    }
                },
                {
                    "label": "Reset Pass On Login",
                    "value": "reset_pass_on_login",
                    "schema": {
                        "type": "boolean"
                    }
                }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}