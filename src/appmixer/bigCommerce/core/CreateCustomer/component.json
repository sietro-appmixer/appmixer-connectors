{
    "name": "appmixer.bigCommerce.core.CreateCustomer",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Create a new customer.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:bigCommerce"
    },
    "quota": {
        "manager": "appmixer:bigCommerce",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "first_name": {
                        "type": "string"
                    },
                    "last_name": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "address_street_1": {
                        "type": "string"
                    },
                    "address_city": {
                        "type": "string"
                    },
                    "address_state": {
                        "type": "string"
                    },
                    "address_zip": {
                        "type": "string"
                    },
                    "address_country": {
                        "type": "string"
                    },
                    "company": {
                        "type": "string"
                    }
                },
                "required": [
                    "email",
                    "first_name",
                    "last_name"
                ]
            },
            "inspector": {
                "inputs": {
                    "email": {
                        "type": "text",
                        "tooltip": "The customer's email address.",
                        "label": "Email",
                        "index": 0
                    },
                    "first_name": {
                        "type": "text",
                        "tooltip": "The customer's first name.",
                        "label": "First Name",
                        "index": 1
                    },
                    "last_name": {
                        "type": "text",
                        "tooltip": "The customer's last name.",
                        "label": "Last Name",
                        "index": 2
                    },
                    "phone": {
                        "type": "text",
                        "tooltip": "The customer's phone number.",
                        "label": "Phone",
                        "index": 3
                    },
                    "address_street_1": {
                        "type": "text",
                        "tooltip": "Primary street address (required if any address field is provided).",
                        "label": "Address Street 1",
                        "index": 4
                    },
                    "address_city": {
                        "type": "text",
                        "tooltip": "City name (required if any address field is provided).",
                        "label": "Address City",
                        "index": 5
                    },
                    "address_state": {
                        "type": "text",
                        "tooltip": "Full state or province name (e.g., 'New York', not 'NY') - required for some countries like US.",
                        "label": "Address State",
                        "index": 6
                    },
                    "address_zip": {
                        "type": "text",
                        "tooltip": "Postal code (will be sent as postal_code to API).",
                        "label": "Address Zip",
                        "index": 7
                    },
                    "address_country": {
                        "type": "text",
                        "tooltip": "Country code (e.g., 'US', 'CA') - required if any address field is provided.",
                        "label": "Address Country",
                        "index": 8
                    },
                    "company": {
                        "type": "text",
                        "tooltip": "Company name.",
                        "label": "Company",
                        "index": 9
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                {
                    "label": "Customer Id",
                    "value": "id",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Email",
                    "value": "email",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "First Name",
                    "value": "first_name",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Last Name",
                    "value": "last_name",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Company",
                    "value": "company",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Phone",
                    "value": "phone",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Notes",
                    "value": "notes",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Tax Exempt Category",
                    "value": "tax_exempt_category",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Customer Group Id",
                    "value": "customer_group_id",
                    "schema": {
                        "type": "number"
                    }
                },
                {
                    "label": "Addresses",
                    "value": "addresses",
                    "schema": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "first_name": {
                                    "type": "string",
                                    "title": "Addresses.First Name"
                                },
                                "last_name": {
                                    "type": "string",
                                    "title": "Addresses.Last Name"
                                },
                                "address1": {
                                    "type": "string",
                                    "title": "Addresses.Address1"
                                },
                                "address2": {
                                    "type": "string",
                                    "title": "Addresses.Address2"
                                },
                                "city": {
                                    "type": "string",
                                    "title": "Addresses.City"
                                },
                                "state_or_province": {
                                    "type": "string",
                                    "title": "Addresses.State Or Province"
                                },
                                "postal_code": {
                                    "type": "string",
                                    "title": "Addresses.Postal Code"
                                },
                                "country_code": {
                                    "type": "string",
                                    "title": "Addresses.Country Code"
                                },
                                "phone": {
                                    "type": "string",
                                    "title": "Addresses.Phone"
                                },
                                "address_type": {
                                    "type": "string",
                                    "title": "Addresses.Address Type"
                                },
                                "customer_id": {
                                    "type": "number",
                                    "title": "Addresses.Customer Id"
                                },
                                "id": {
                                    "type": "number",
                                    "title": "Addresses.Id"
                                },
                                "country": {
                                    "type": "string",
                                    "title": "Addresses.Country"
                                }
                            }
                        }
                    }
                },
                {
                    "label": "Store Credit Amounts",
                    "value": "store_credit_amounts",
                    "schema": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "amount": {
                                    "type": "number",
                                    "title": "Store Credit Amounts.Amount"
                                }
                            }
                        }
                    }
                },
                {
                    "label": "Accepts Product Review Abandoned Cart Emails",
                    "value": "accepts_product_review_abandoned_cart_emails",
                    "schema": {
                        "type": "boolean"
                    }
                },
                {
                    "label": "Channel Ids",
                    "value": "channel_ids",
                    "schema": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        }
                    }
                },
                {
                    "label": "Shopper Profile Id",
                    "value": "shopper_profile_id",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Segment Ids",
                    "value": "segment_ids",
                    "schema": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}