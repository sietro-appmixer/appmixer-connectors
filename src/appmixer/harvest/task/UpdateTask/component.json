{
    "name": "appmixer.harvest.task.UpdateTask",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Update an existing task.",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:harvest"
    },
    "quota": {
        "manager": "appmixer:harvest",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "taskId": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "isActive": {
                        "type": "boolean"
                    },
                    "billableByDefault": {
                        "type": "boolean"
                    },
                    "defaultHourlyRate": {
                        "type": "number"
                    },
                    "isDefault": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "taskId"
                ]
            },
            "inspector": {
                "inputs": {
                    "taskId": {
                        "type": "text",
                        "label": "Task ID",
                        "index": 1,
                        "tooltip": "The ID of the task to update"
                    },
                    "name": {
                        "type": "text",
                        "label": "Task Name",
                        "index": 2,
                        "tooltip": "The name of the task"
                    },
                    "isActive": {
                        "type": "toggle",
                        "label": "Is Active",
                        "index": 3,
                        "tooltip": "Whether the task is active and available for time tracking"
                    },
                    "billableByDefault": {
                        "type": "toggle",
                        "label": "Billable by Default",
                        "index": 4,
                        "tooltip": "Whether time entries for this task are billable by default"
                    },
                    "defaultHourlyRate": {
                        "type": "number",
                        "label": "Default Hourly Rate",
                        "index": 5,
                        "tooltip": "The default hourly rate for this task"
                    },
                    "isDefault": {
                        "type": "toggle",
                        "label": "Is Default",
                        "index": 6,
                        "tooltip": "Whether this task should be automatically added to new projects"
                    }
                }
            }
        }
    ],
    "outPorts": [
        "out"
    ],
    "icon": "data:image/png;base64,"
}
