{
    "name": "appmixer.harvest.client.CreateClient",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Create a new client.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:harvest"
    },
    "quota": {
        "manager": "appmixer:harvest",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "isActive": {
                        "type": "boolean"
                    },
                    "address": {
                        "type": "string"
                    },
                    "currency": {
                        "type": "string"
                    }
                },
                "required": [
                    "name"
                ]
            },
            "inspector": {
                "inputs": {
                    "name": {
                        "type": "text",
                        "tooltip": "Client Name.",
                        "label": "Name",
                        "index": 1
                    },
                    "isActive": {
                        "type": "toggle",
                        "tooltip": "Set client active or archived.",
                        "label": "Is Active",
                        "index": 2,
                        "defaultValue": true
                    },
                    "address": {
                        "type": "textarea",
                        "tooltip": "A textual representation of the client’s physical address. May include new line characters.",
                        "label": "Address",
                        "index": 3
                    },
                    "currency": {
                        "type": "text",
                        "tooltip": "The currency used by the client. If not provided, the company’s currency will be used. (e.g., USD, EUR).",
                        "label": "Currency",
                        "index": 4
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                {
                    "label": "Client ID",
                    "value": "id",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Client Name",
                    "value": "name",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Is Active",
                    "value": "is_active",
                    "schema": {
                        "type": "boolean"
                    }
                },
                {
                    "label": "Address",
                    "value": "address",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Statement Key",
                    "value": "statement_key",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Currency",
                    "value": "currency",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Created At",
                    "value": "created_at",
                    "schema": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                {
                    "label": "Updated At",
                    "value": "updated_at",
                    "schema": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            ]
        }
    ],
    "icon": "data:image/png;base64,"
}
