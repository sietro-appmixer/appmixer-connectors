{
    "name": "appmixer.harvest.invoice.UpdateInvoice",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Update an existing invoice with partial update support.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:harvest"
    },
    "quota": {
        "manager": "appmixer:harvest",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "invoiceId": {
                        "type": "string"
                    },
                    "clientId": {
                        "type": "string"
                    },
                    "subject": {
                        "type": "string"
                    },
                    "number": {
                        "type": "string"
                    },
                    "issueDate": {
                        "type": "string"
                    },
                    "dueDate": {
                        "type": "string"
                    },
                    "paymentTerm": {
                        "type": "string"
                    },
                    "purchaseOrder": {
                        "type": "string"
                    },
                    "notes": {
                        "type": "string"
                    },
                    "currency": {
                        "type": "string"
                    },
                    "tax": {
                        "type": "number"
                    },
                    "tax2": {
                        "type": "number"
                    },
                    "discount": {
                        "type": "number"
                    },
                    "estimateId": {
                        "type": "string"
                    },
                    "retainerId": {
                        "type": "string"
                    }
                },
                "required": [
                    "invoiceId"
                ]
            },
            "inspector": {
                "inputs": {
                    "invoiceId": {
                        "type": "text",
                        "label": "Invoice ID",
                        "index": 0,
                        "tooltip": "Required. The ID of the invoice to update."
                    },
                    "clientId": {
                        "type": "text",
                        "label": "Client ID",
                        "index": 1,
                        "tooltip": "The ID of the client this invoice belongs to."
                    },
                    "subject": {
                        "type": "text",
                        "label": "Subject",
                        "index": 2,
                        "tooltip": "The invoice subject."
                    },
                    "number": {
                        "type": "text",
                        "label": "Invoice Number",
                        "index": 3,
                        "tooltip": "Unique invoice number."
                    },
                    "issueDate": {
                        "type": "date-time",
                        "label": "Issue Date",
                        "index": 4,
                        "tooltip": "Date the invoice was issued. Format: YYYY-MM-DD.",
                        "config": {
                            "enableTime": false,
                            "format": "YYYY-MM-DD"
                        }
                    },
                    "paymentTerm": {
                        "type": "select",
                        "label": "Payment Term",
                        "index": 5,
                        "tooltip": "The timeframe in which the invoice should be paid.",
                        "options": [
                            {
                                "label": "Upon Receipt",
                                "value": "upon receipt"
                            },
                            {
                                "label": "Net 15",
                                "value": "net 15"
                            },
                            {
                                "label": "Net 30",
                                "value": "net 30"
                            },
                            {
                                "label": "Net 45",
                                "value": "net 45"
                            },
                            {
                                "label": "Net 60",
                                "value": "net 60"
                            },
                            {
                                "label": "Custom",
                                "value": "custom"
                            }
                        ]
                    },
                    "dueDate": {
                        "type": "date-time",
                        "label": "Due Date",
                        "index": 6,
                        "tooltip": "Date the invoice is due. Only taken into account if Payment Term is set to 'Custom'. Format: YYYY-MM-DD.",
                        "config": {
                            "enableTime": false,
                            "format": "YYYY-MM-DD"
                        }
                    },
                    "purchaseOrder": {
                        "type": "text",
                        "label": "Purchase Order",
                        "index": 7,
                        "tooltip": "The purchase order number."
                    },
                    "notes": {
                        "type": "textarea",
                        "label": "Notes",
                        "index": 8,
                        "tooltip": "Any additional notes to include on the invoice."
                    },
                    "currency": {
                        "type": "text",
                        "label": "Currency",
                        "index": 9,
                        "tooltip": "The currency used by the invoice (e.g., USD, EUR)."
                    },
                    "tax": {
                        "type": "number",
                        "label": "Tax Percentage",
                        "index": 10,
                        "tooltip": "Tax percentage to apply to the subtotal (e.g., 10.0 for 10%)."
                    },
                    "tax2": {
                        "type": "number",
                        "label": "Tax2 Percentage",
                        "index": 11,
                        "tooltip": "Second tax percentage to apply to the subtotal."
                    },
                    "discount": {
                        "type": "number",
                        "label": "Discount Percentage",
                        "index": 12,
                        "tooltip": "Discount percentage to subtract from the subtotal (e.g., 10.0 for 10%)."
                    },
                    "estimateId": {
                        "type": "text",
                        "label": "Estimate ID",
                        "index": 13,
                        "tooltip": "The ID of the estimate associated with this invoice."
                    },
                    "retainerId": {
                        "type": "text",
                        "label": "Retainer ID",
                        "index": 14,
                        "tooltip": "The ID of the retainer you want to associate with this invoice."
                    }
                }
            }
        }
    ],
    "outPorts": [
        "out"
    ],
    "icon": "data:image/png;base64,"
}
