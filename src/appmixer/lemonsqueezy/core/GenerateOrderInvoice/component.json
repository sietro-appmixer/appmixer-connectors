{
    "name": "appmixer.lemonsqueezy.core.GenerateOrderInvoice",
    "label": "Generate Order Invoice",
    "description": "Generate an invoice for an order",
    "author": "Appmixer <info@appmixer.com>",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:lemonsqueezy"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "orderId": {
                        "type": "string",
                        "title": "Order ID",
                        "description": "The ID of the order to generate invoice for"
                    },
                    "name": {
                        "type": "string",
                        "title": "Customer Name",
                        "description": "The customer's full name for the invoice"
                    },
                    "address": {
                        "type": "string",
                        "title": "Address",
                        "description": "The customer's street address"
                    },
                    "city": {
                        "type": "string",
                        "title": "City",
                        "description": "The customer's city"
                    },
                    "state": {
                        "type": "string",
                        "title": "State/Province",
                        "description": "The customer's state or province"
                    },
                    "zipCode": {
                        "type": "string",
                        "title": "ZIP/Postal Code",
                        "description": "The customer's ZIP or postal code"
                    },
                    "country": {
                        "type": "string",
                        "title": "Country",
                        "description": "The customer's country"
                    }
                },
                "required": ["orderId", "name", "address", "city", "state", "zipCode", "country"]
            },
            "inspector": {
                "inputs": {
                    "orderId": {
                        "label": "Order ID",
                        "type": "text",
                        "index": 1,
                        "tooltip": "Enter the ID of the order you want to generate an invoice for"
                    },
                    "name": {
                        "label": "Customer Name",
                        "type": "text",
                        "index": 2,
                        "tooltip": "Enter the customer's full name for the invoice"
                    },
                    "address": {
                        "label": "Address",
                        "type": "text",
                        "index": 3,
                        "tooltip": "Enter the customer's street address"
                    },
                    "city": {
                        "label": "City",
                        "type": "text",
                        "index": 4,
                        "tooltip": "Enter the customer's city"
                    },
                    "state": {
                        "label": "State/Province",
                        "type": "text",
                        "index": 5,
                        "tooltip": "Enter the customer's state or province"
                    },
                    "zipCode": {
                        "label": "ZIP/Postal Code",
                        "type": "text",
                        "index": 6,
                        "tooltip": "Enter the customer's ZIP or postal code"
                    },
                    "country": {
                        "label": "Country",
                        "type": "text",
                        "index": 7,
                        "tooltip": "Enter the customer's country"
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                { "label": "Order ID", "value": "orderId" },
                { "label": "Invoice URL", "value": "invoiceUrl" }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}
