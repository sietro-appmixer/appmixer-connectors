{
    "name": "appmixer.lemonsqueezy.core.CreateCustomer",
    "author": "Appmixer <info@appmixer.com>",
    "label": "Create Customer",
    "description": "Creates a new customer in your LemonSqueezy store. A customer object represents a customer of your store and is created when they purchase a product for the first time.",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:lemonsqueezy"
    },
    "quota": {
        "manager": "appmixer:lemonsqueezy",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "storeId": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "city": {
                        "type": "string"
                    },
                    "region": {
                        "type": "string"
                    },
                    "country": {
                        "type": "string"
                    }
                },
                "required": ["storeId", "name", "email"]
            },
            "inspector": {
                "inputs": {
                    "storeId": {
                        "type": "text",
                        "label": "Store ID",
                        "index": 0,
                        "tooltip": "The ID of the store to create the customer in. Use FindStores component to get available store IDs."
                    },
                    "name": {
                        "type": "text",
                        "label": "Customer Name",
                        "index": 1,
                        "tooltip": "The full name of the customer."
                    },
                    "email": {
                        "type": "text",
                        "label": "Email Address",
                        "index": 2,
                        "tooltip": "The email address of the customer."
                    },
                    "city": {
                        "type": "text",
                        "label": "City",
                        "index": 3,
                        "tooltip": "The city of the customer."
                    },
                    "region": {
                        "type": "text",
                        "label": "Region/State",
                        "index": 4,
                        "tooltip": "The region or state of the customer."
                    },
                    "country": {
                        "type": "text",
                        "label": "Country Code",
                        "index": 5,
                        "tooltip": "The ISO 3166-1 two-letter country code for the customer (e.g. US, GB, etc)."
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                { "label": "Customer ID", "value": "id" },
                { "label": "Store ID", "value": "attributes.store_id" },
                { "label": "Name", "value": "attributes.name" },
                { "label": "Email", "value": "attributes.email" },
                { "label": "Status", "value": "attributes.status" },
                { "label": "Status Formatted", "value": "attributes.status_formatted" },
                { "label": "City", "value": "attributes.city" },
                { "label": "Region", "value": "attributes.region" },
                { "label": "Country", "value": "attributes.country" },
                { "label": "Country Formatted", "value": "attributes.country_formatted" },
                { "label": "Total Revenue Currency", "value": "attributes.total_revenue_currency" },
                { "label": "Total Revenue Currency Formatted", "value": "attributes.total_revenue_currency_formatted" },
                { "label": "MRR", "value": "attributes.mrr" },
                { "label": "MRR Formatted", "value": "attributes.mrr_formatted" },
                { "label": "Customer Portal URL", "value": "attributes.urls.customer_portal" },
                { "label": "Created At", "value": "attributes.created_at" },
                { "label": "Updated At", "value": "attributes.updated_at" },
                { "label": "Test Mode", "value": "attributes.test_mode" }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}
