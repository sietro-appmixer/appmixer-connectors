{
    "actions": [
        {
            "title": "Find Contacts",
            "description": "Search for contacts using query criteria and filters. Use query object to define search parameters like field, operator, and value.",
            "type": "action",
            "documentation": "https://developers.intercom.com/reference#search-contacts",
            "endpointUrl": "/contacts/search",
            "apiBaseUrl": "https://api.intercom.io",
            "method": "POST",
            "sampleRequest": {
                "query": {
                    "field": "email",
                    "operator": "=",
                    "value": "joe@example.com"
                }
            },
            "sampleResponse": {
                "type": "list",
                "data": [
                    {
                        "id": "12345",
                        "email": "john.doe@example.com",
                        "name": "John Doe",
                        "custom_attributes": {}
                    }
                ],
                "pages": {
                    "next": {
                        "page": 2,
                        "starting_after": "cursor_value"
                    }
                }
            },
            "inputSchema": {
                "type": "object",
                "description": "Input parameters for searching contacts",
                "properties": {
                    "query": {
                        "type": "object",
                        "description": "Search query object defining field, operator, and value. Can also support complex queries with AND/OR operators.",
                        "properties": {
                            "field": {
                                "type": "string",
                                "description": "The field to search on (e.g., 'email', 'name', 'custom_attributes.field_name')"
                            },
                            "operator": {
                                "type": "string",
                                "description": "The operator for comparison (e.g., '=', '!=', 'IN', 'NIN', '>', '<', '~')"
                            },
                            "value": {
                                "description": "The value to search for"
                            }
                        }
                    },
                    "pagination": {
                        "type": "object",
                        "description": "Pagination parameters",
                        "properties": {
                            "per_page": {
                                "type": "number",
                                "description": "Number of results per page (max 150)"
                            },
                            "starting_after": {
                                "type": "string",
                                "description": "Cursor for pagination"
                            }
                        }
                    }
                }
            },
            "outputType": {
                "outputType": "array",
                "arrayPropertyValue": "data"
            }
        },
