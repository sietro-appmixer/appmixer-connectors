{
    "name": "appmixer.intercom.core.SendMessage",
    "label": "Send Message",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Send a targeted message (such as an in-app or email message) to a contact. Please note that the changes made using the Intercom API are not reflected in real time.",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:intercom"
    },
    "quota": {
        "manager": "appmixer:intercom",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "message_type": {
                        "type": "string",
                        "enum": [
                            "in_app",
                            "email"
                        ],
                        "title": "Message Type"
                    },
                    "body": {
                        "type": "string",
                        "title": "Body"
                    },
                    "subject": {
                        "type": "string",
                        "title": "Subject"
                    },
                    "template": {
                        "type": "string",
                        "enum": [
                            "plain",
                            "personal"
                        ],
                        "title": "Template"
                    },
                    "from_admin_id": {
                        "type": "integer",
                        "title": "From Admin Id"
                    },
                    "to_contact_id": {
                        "type": "string",
                        "title": "To Contact Id"
                    },
                    "to_contact_type": {
                        "type": "string",
                        "enum": [
                            "user",
                            "lead"
                        ],
                        "title": "To Contact Type",
                        "default": "user"
                    },
                    "create_conversation_without_contact_reply": {
                        "type": "boolean",
                        "title": "Create Conversation Without Contact Reply"
                    }
                },
                "required": [
                    "message_type",
                    "body",
                    "to_contact_id",
                    "from_admin_id"
                ],
                "if": {
                    "properties": {
                        "message_type": {
                            "const": "email"
                        }
                    }
                },
                "then": {
                    "required": [
                        "subject",
                        "template"
                    ]
                }
            },
            "inspector": {
                "inputs": {
                    "message_type": {
                        "type": "select",
                        "tooltip": "The kind of message being created (in-app or email). For email messages, subject and template are required.",
                        "label": "Message Type",
                        "index": 0,
                        "options": [
                            {
                                "label": "In-App Message",
                                "value": "in_app"
                            },
                            {
                                "label": "Email Message",
                                "value": "email"
                            }
                        ]
                    },
                    "body": {
                        "type": "textarea",
                        "tooltip": "The content of the message. HTML and plaintext are supported.",
                        "label": "Body",
                        "index": 1
                    },
                    "subject": {
                        "type": "text",
                        "tooltip": "The title of the email. Required for email messages, optional for in-app messages.",
                        "label": "Subject",
                        "index": 2
                    },
                    "template": {
                        "type": "select",
                        "tooltip": "The style of the outgoing message. Required for email messages, optional for in-app messages.",
                        "label": "Template",
                        "index": 3,
                        "options": [
                            {
                                "label": "Plain",
                                "value": "plain"
                            },
                            {
                                "label": "Personal",
                                "value": "personal"
                            }
                        ]
                    },
                    "to_contact_id": {
                        "type": "text",
                        "tooltip": "The unique identifier of the contact to whom the message is sent. You can use FindContacts component to get contact IDs.",
                        "label": "To Contact Id",
                        "index": 4
                    },
                    "to_contact_type": {
                        "type": "select",
                        "tooltip": "The role associated to the contact - user or lead.",
                        "label": "To Contact Type",
                        "index": 5,
                        "defaultValue": "user",
                        "options": [
                            {
                                "label": "User",
                                "value": "user"
                            },
                            {
                                "label": "Lead",
                                "value": "lead"
                            }
                        ]
                    },
                    "from_admin_id": {
                        "type": "number",
                        "tooltip": "The identifier for the admin sending the message. Required. You can use ListAdmins component to get admin IDs.",
                        "label": "From Admin Id",
                        "index": 6
                    },
                    "create_conversation_without_contact_reply": {
                        "type": "toggle",
                        "tooltip": "Whether a conversation should be opened in the inbox for the message without the contact replying. Defaults to false.",
                        "label": "Create Conversation Without Contact Reply",
                        "index": 8
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                {
                    "label": "Type",
                    "value": "type",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Id",
                    "value": "id",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Created At",
                    "value": "created_at",
                    "schema": {
                        "type": "number"
                    }
                },
                {
                    "label": "Body",
                    "value": "body",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Message Type",
                    "value": "message_type",
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "label": "Conversation Id",
                    "value": "conversation_id",
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        }
    ],
    "icon": "data:image/svg+xml;base64,"
}