{
    "name": "appmixer.intercom.core.UpdateContact",
    "label": "Update Contact",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Update details for an existing contact by providing the contact ID and fields to update.",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:intercom"
    },
    "quota": {
        "manager": "appmixer:intercom",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "contact_id": {
                        "type": "string"
                    },
                    "external_id": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "unsubscribed_from_emails": {
                        "type": "boolean"
                    },
                    "language_override": {
                        "type": "string"
                    }
                },
                "required": [
                    "contact_id"
                ]
            },
            "inspector": {
                "inputs": {
                    "contact_id": {
                        "type": "text",
                        "tooltip": "The unique identifier of the contact to update",
                        "label": "Contact ID",
                        "index": 0
                    },
                    "external_id": {
                        "type": "text",
                        "tooltip": "The unique identifier for the contact which is provided by the Client",
                        "label": "External ID",
                        "index": 1
                    },
                    "role": {
                        "type": "select",
                        "tooltip": "The role of the contact",
                        "label": "Role",
                        "index": 2,
                        "options": [
                            {
                                "label": "User",
                                "value": "user"
                            },
                            {
                                "label": "Lead",
                                "value": "lead"
                            }
                        ]
                    },
                    "email": {
                        "type": "text",
                        "tooltip": "The contact's email address",
                        "label": "Email",
                        "index": 3
                    },
                    "phone": {
                        "type": "text",
                        "tooltip": "The contact's phone number",
                        "label": "Phone",
                        "index": 4
                    },
                    "name": {
                        "type": "text",
                        "tooltip": "The contact's full name",
                        "label": "Name",
                        "index": 5
                    },
                    "unsubscribed_from_emails": {
                        "type": "toggle",
                        "tooltip": "Whether the contact is unsubscribed from emails",
                        "label": "Unsubscribed From Emails",
                        "index": 7,
                        "defaultValue": false
                    },
                    "language_override": {
                        "type": "text",
                        "tooltip": "A preferred language setting for the contact (e.g., 'en', 'fr', 'es')",
                        "label": "Language Override",
                        "index": 10
                    }
                }
            }
        }
    ],
    "outPorts": [
        "out"
    ],
    "icon": "data:image/svg+xml;base64,"
}