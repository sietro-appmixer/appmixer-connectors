{
    "name": "appmixer.front.tag.CreateTag",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Create a new tag in Front. Tags are used to classify conversations.",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:front"
    },
    "quota": {
        "manager": "appmixer:front",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "highlight": {
                        "type": "string"
                    },
                    "isVisibleInConversationLists": {
                        "type": "boolean"
                    }
                },
                "required": ["name"]
            },
            "inspector": {
                "inputs": {
                    "name": {
                        "type": "text",
                        "label": "Name",
                        "index": 0,
                        "tooltip": "The name of the tag"
                    },
                    "description": {
                        "type": "text",
                        "label": "Description",
                        "index": 1,
                        "tooltip": "A brief description of the tag"
                    },
                    "highlight": {
                        "type": "select",
                        "label": "Highlight Color",
                        "index": 2,
                        "tooltip": "The color to highlight the tag in Front",
                        "options": [
                            { "clearItem": true, "label": "<Empty>" },
                            { "label": "Blue", "value": "blue" },
                            { "label": "Red", "value": "red" },
                            { "label": "Green", "value": "green" },
                            { "label": "Yellow", "value": "yellow" },
                            { "label": "Orange", "value": "orange" },
                            { "label": "Purple", "value": "purple" },
                            { "label": "Pink", "value": "pink" },
                            { "label": "Grey", "value": "grey" },
                            { "label": "Light Blue", "value": "light-blue" }
                        ]
                    },
                    "isVisibleInConversationLists": {
                        "type": "toggle",
                        "label": "Is Visible in Conversation Lists",
                        "index": 3,
                        "defaultValue": false,
                        "tooltip": "Whether the tag is visible in conversation lists"
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                { "label": "Tag ID", "value": "id" },
                { "label": "Name", "value": "name" },
                { "label": "Highlight", "value": "highlight" },
                { "label": "Description", "value": "description" },
                { "label": "Is Private", "value": "is_private" },
                { "label": "Is Visible in Conversation Lists", "value": "is_visible_in_conversation_lists" },
                { "label": "Updated At", "value": "updated_at" },
                { "label": "Created At", "value": "created_at" },
                { 
                    "label": "Links", 
                    "value": "_links",
                    "schema": {
                        "type": "object",
                        "properties": {
                            "self": { "type": "string", "title": "Self URL" },
                            "related": {
                                "type": "object",
                                "properties": {
                                    "conversations": { "type": "string", "title": "Conversations URL" },
                                    "owner": { "type": "string", "title": "Owner URL" },
                                    "parent_tag": { "type": ["string", "null"], "title": "Parent Tag URL" },
                                    "children": { "type": ["string", "null"], "title": "Children URL" }
                                },
                                "title": "Related Links"
                            }
                        }
                    }
                }
            ]
        }
    ],
    "icon": "data:image/png;base64,"
}
