{
    "name": "appmixer.front.tag.UpdateTag",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Update an existing tag in Front.",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:front"
    },
    "quota": {
        "manager": "appmixer:front",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "highlight": {
                        "type": "string"
                    },
                    "parentTagId": {
                        "type": "string"
                    },
                    "isVisibleInConversationLists": {
                        "type": "boolean"
                    }
                },
                "required": ["id"]
            },
            "inspector": {
                "inputs": {
                    "id": {
                        "type": "text",
                        "label": "Tag ID",
                        "index": 0,
                        "tooltip": "The unique identifier of the tag to update"
                    },
                    "name": {
                        "type": "text",
                        "label": "Name",
                        "index": 2,
                        "tooltip": "The updated name of the tag"
                    },
                    "description": {
                        "type": "text",
                        "label": "Description",
                        "index": 3,
                        "tooltip": "A brief description of the tag"
                    },
                    "highlight": {
                        "type": "select",
                        "label": "Highlight Color",
                        "index": 3,
                        "tooltip": "The color to highlight the tag in Front",
                        "options": [
                            { "clearItem": true, "label": "<Empty>" },
                            { "label": "Blue", "value": "blue" },
                            { "label": "Red", "value": "red" },
                            { "label": "Green", "value": "green" },
                            { "label": "Yellow", "value": "yellow" },
                            { "label": "Orange", "value": "orange" },
                            { "label": "Purple", "value": "purple" },
                            { "label": "Pink", "value": "pink" },
                            { "label": "Grey", "value": "grey" },
                            { "label": "Light Blue", "value": "light-blue" }
                        ]
                    },
                    "parentTagId": {
                        "type": "text",
                        "label": "Parent Tag ID",
                        "index": 4,
                        "tooltip": "ID of the parent of this tag. Set to null to remove the parent tag."
                    },
                    "isVisibleInConversationLists": {
                        "type": "toggle",
                        "label": "Is Visible in Conversation Lists",
                        "index": 5,
                        "tooltip": "Whether the tag is visible in conversation lists"
                    }
                }
            }
        }
    ],
    "outPorts": ["out"],
    "icon": "data:image/png;base64,"
}
