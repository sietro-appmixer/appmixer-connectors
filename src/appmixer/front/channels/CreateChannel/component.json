{
    "name": "appmixer.front.channels.CreateChannel",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Create a custom channel linked to an inbox.",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:front"
    },
    "quota": {
        "manager": "appmixer:front",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "inboxId": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "undoSendTime": {
                        "type": "string",
                        "enum": ["0", "5", "10", "15", "30", "60"]
                    },
                    "allTeammatesCanReply": {
                        "type": "boolean"
                    },
                    "webhookUrl": {
                        "type": "string"
                    }
                },
                "required": ["inboxId", "name"]
            },
            "inspector": {
                "inputs": {
                    "inboxId": {
                        "type": "text",
                        "label": "Inbox ID",
                        "index": 0,
                        "tooltip": "The unique identifier of the inbox"
                    },
                    "name": {
                        "type": "text",
                        "label": "Channel Name",
                        "index": 1,
                        "tooltip": "The name of the channel"
                    },
                    "webhookUrl": {
                        "type": "text",
                        "label": "Webhook URL",
                        "index": 2,
                        "tooltip": "URL to receive webhook notifications"
                    },
                    "undoSendTime": {
                        "type": "select",
                        "label": "Undo Send Time (seconds)",
                        "index": 3,
                        "tooltip": "Time limit to undo sending a message",
                        "options": [
                            { "label": "0 seconds", "value": "0" },
                            { "label": "5 seconds", "value": "5" },
                            { "label": "10 seconds", "value": "10" },
                            { "label": "15 seconds", "value": "15" },
                            { "label": "30 seconds", "value": "30" },
                            { "label": "60 seconds", "value": "60" }
                        ]
                    },
                    "allTeammatesCanReply": {
                        "type": "toggle",
                        "label": "All Teammates Can Reply",
                        "index": 4,
                        "tooltip": "Allow all teammates to reply from this channel"
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                { "label": "Channel ID", "value": "id" },
                { "label": "Name", "value": "name" },
                { "label": "Address", "value": "address" },
                { "label": "Send As", "value": "send_as" },
                { "label": "Type", "value": "type" },
                { "label": "Settings", "value": "settings" },
                { "label": "Settings - Undo Send Time", "value": "settings.undo_send_time" },
                { "label": "Settings - All Teammates Can Reply", "value": "settings.all_teammates_can_reply" },
                { "label": "Is Private", "value": "is_private" },
                { "label": "Is Valid", "value": "is_valid" },
                { "label": "Links", "value": "_links" },
                { "label": "Links - Self", "value": "_links.self" },
                { "label": "Links - Related", "value": "_links.related" },
                { "label": "Links - Related - Inbox", "value": "_links.related.inbox" },
                { "label": "Links - Related - Owner", "value": "_links.related.owner" }
            ]
        }
    ],
    "icon": "data:image/png;base64,"
}
