{
    "name": "appmixer.front.channels.UpdateChannel",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Update a channel's details.",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:front"
    },
    "quota": {
        "manager": "appmixer:front",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "channelId": {
                        "type": "string"
                    },
                    "inboxId": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "undoSendTime": {
                        "type": "string",
                        "enum": ["0", "5", "10", "15", "30", "60"]
                    },
                    "allTeammatesCanReply": {
                        "type": "boolean"
                    },
                    "webhookUrl": {
                        "type": "string"
                    }
                },
                "required": ["channelId"]
            },
            "inspector": {
                "inputs": {
                    "channelId": {
                        "type": "text",
                        "label": "Channel ID",
                        "index": 0,
                        "tooltip": "The unique identifier of the channel to update"
                    },
                    "inboxId": {
                        "type": "text",
                        "label": "Inbox ID",
                        "index": 1,
                        "tooltip": "ID of the inbox to move this channel to. Will also move corresponding conversations."
                    },
                    "name": {
                        "type": "text",
                        "label": "Channel Name",
                        "index": 2,
                        "tooltip": "The name of the channel"
                    },
                    "webhookUrl": {
                        "type": "text",
                        "label": "Webhook URL",
                        "index": 3,
                        "tooltip": "URL to receive webhook notifications"
                    },
                    "undoSendTime": {
                        "type": "select",
                        "label": "Undo Send Time (seconds)",
                        "index": 4,
                        "tooltip": "Time limit to undo sending a message",
                        "options": [
                            { "label": "0 seconds", "value": "0" },
                            { "label": "5 seconds", "value": "5" },
                            { "label": "10 seconds", "value": "10" },
                            { "label": "15 seconds", "value": "15" },
                            { "label": "30 seconds", "value": "30" },
                            { "label": "60 seconds", "value": "60" }
                        ]
                    },
                    "allTeammatesCanReply": {
                        "type": "toggle",
                        "label": "All Teammates Can Reply",
                        "index": 5,
                        "tooltip": "Allow all teammates to reply from this channel"
                    }
                }
            }
        }
    ],
    "outPorts": ["out"],
    "icon": "data:image/png;base64,"
}
