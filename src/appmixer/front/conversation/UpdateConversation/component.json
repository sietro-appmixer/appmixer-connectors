{
    "name": "appmixer.front.conversation.UpdateConversation",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Assign, move or change status of a conversation.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:front"
    },
    "quota": {
        "manager": "appmixer:front",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    },
                    "assigneeId": {
                        "type": "string"
                    },
                    "inboxId": {
                        "type": "string"
                    }
                },
                "required": ["id"]
            },
            "inspector": {
                "inputs": {
                    "id": {
                        "type": "text",
                        "label": "Conversation ID",
                        "index": 0
                    },
                    "status": {
                        "type": "select",
                        "tooltip": "New status",
                        "label": "Status",
                        "options": [
                            { "clearItem": true, "label": "<Empty>" },
                            {
                                "label": "Archived",
                                "value": "archived"
                            },
                            {
                                "label": "Open",
                                "value": "open"
                            },
                            {
                                "label": "Deleted",
                                "value": "deleted"
                            },
                            {
                                "label": "Spam",
                                "value": "spam"
                            }
                        ],
                        "index": 1
                    },
                    "assigneeId": {
                        "type": "text",
                        "tooltip": "Teammate ID to assign to",
                        "label": "Assignee ID",
                        "index": 2,
                        "source": {
                            "url": "/component/appmixer/front/teammates/ListTeammates?outPort=out",
                            "data": {
                                "message": {
                                    "in/outputType": "array"
                                },
                                "properties": {
                                    "isSource": true
                                },
                                "transform": "./ListTeammates#toSelectArray"
                            }
                        }
                    },
                    "inboxId": {
                        "type": "text",
                        "tooltip": "Move conversation to this inbox",
                        "label": "Inbox ID",
                        "index": 3
                    }
                }
            }
        }
    ],
    "outPorts": ["out"],
    "icon": "data:image/png;base64,"
}
