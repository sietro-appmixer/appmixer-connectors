{
    "name": "appmixer.front.message.ReplyMessage",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Reply to a conversation by sending a message and appending it to the existing conversation.",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:front"
    },
    "quota": {
        "manager": "appmixer:front",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "conversationId": {
                        "type": "string"
                    },
                    "to": {
                        "type": "string"
                    },
                    "authorId": {
                        "type": "string"
                    },
                    "senderName": {
                        "type": "string"
                    },
                    "body": {
                        "type": "string"
                    },
                    "cc": {
                        "type": "string"
                    },
                    "bcc": {
                        "type": "string"
                    },
                    "subject": {
                        "type": "string"
                    },
                    "tags": {
                        "type": "string"
                    },
                    "archive": {
                        "type": "boolean"
                    }
                },
                "required": ["conversationId", "body"]
            },
            "inspector": {
                "inputs": {
                    "conversationId": {
                        "type": "text",
                        "label": "Conversation ID",
                        "index": 0,
                        "tooltip": "The ID of the conversation to reply to"
                    },
                    "body": {
                        "type": "textarea",
                        "label": "Body",
                        "index": 1,
                        "tooltip": "The body of the message (plain text or HTML)"
                    },
                    "to": {
                        "type": "text",
                        "label": "To (Recipients)",
                        "index": 2,
                        "tooltip": "Comma-separated list of recipient email addresses"
                    },
                    "authorId": {
                        "type": "text",
                        "label": "Author ID",
                        "index": 3,
                        "tooltip": "The teammate ID of the message author",
                        "source": {
                            "url": "/component/appmixer/front/teammates/ListTeammates?outPort=out",
                            "data": {
                                "message": {
                                    "in/outputType": "array"
                                },
                                "properties": {
                                    "isSource": true
                                },
                                "transform": "./ListTeammates#toSelectArray"
                            }
                        }
                    },
                    "senderName": {
                        "type": "text",
                        "label": "Sender Name",
                        "index": 4,
                        "tooltip": "Name to display as the sender"
                    },
                    "subject": {
                        "type": "text",
                        "label": "Subject",
                        "index": 5,
                        "tooltip": "The subject line of the message"
                    },
                    "channelId": {
                        "type": "text",
                        "label": "Channel ID",
                        "index": 6,
                        "tooltip": "Channel ID the message is sent from"
                    },
                    "cc": {
                        "type": "text",
                        "label": "CC",
                        "index": 7,
                        "tooltip": "Comma-separated list of CC email addresses"
                    },
                    "bcc": {
                        "type": "text",
                        "label": "BCC",
                        "index": 8,
                        "tooltip": "Comma-separated list of BCC email addresses"
                    },
                    "tags": {
                        "type": "text",
                        "label": "Tags",
                        "index": 9,
                        "tooltip": "Comma-separated list of tags for the message"
                    },
                    "archive": {
                        "type": "toggle",
                        "label": "Archive",
                        "index": 10,
                        "defaultValue": true,
                        "tooltip": "Archive the conversation right when sending the message"
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                { "label": "Message ID", "value": "id" },
                { "label": "Message UID", "value": "message_uid" },
                { "label": "Type", "value": "type" },
                { "label": "Is Inbound", "value": "is_inbound" },
                { "label": "Is Draft", "value": "is_draft" },
                { "label": "Created At", "value": "created_at" },
                { "label": "Blurb", "value": "blurb" },
                { "label": "Body", "value": "body" },
                { "label": "Text", "value": "text" },
                { "label": "Error Type", "value": "error_type" },
                { "label": "Version", "value": "version" },
                { "label": "Subject", "value": "subject" },
                { "label": "Draft Mode", "value": "draft_mode" },
                { "label": "Metadata", "value": "metadata", "schema": { "type": "object" } },
                { "label": "Author", "value": "author" },
                { 
                    "label": "Recipients", 
                    "value": "recipients", 
                    "schema": { 
                        "type": "array", 
                        "items": { 
                            "type": "object", 
                            "properties": { 
                                "name": { "type": "string" }, 
                                "handle": { "type": "string" }, 
                                "role": { "type": "string" } 
                            } 
                        } 
                    } 
                },
                {
                    "label": "Attachments",
                    "value": "attachments",
                    "schema": {
                        "type": "array"
                    }
                },
                { "label": "Signature", "value": "signature" },
                { "label": "Conversation Reference", "value": "conversation_reference" },
                { "label": "Status", "value": "status" },
                {
                    "label": "Links",
                    "value": "_links",
                    "schema": {
                        "type": "object",
                        "properties": {
                            "self": {
                                "type": "string"
                            },
                            "related": {
                                "type": "object"
                            }
                        }
                    }
                }
            ]
        }
    ],
    "icon": "data:image/png;base64,"
}
