{
    "name": "appmixer.front.comments.GetComment",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Retrieve a specific comment by ID.",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:front"
    },
    "quota": {
        "manager": "appmixer:front",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "commentId": {
                        "type": "string"
                    }
                },
                "required": ["commentId"]
            },
            "inspector": {
                "inputs": {
                    "commentId": {
                        "type": "text",
                        "label": "Comment ID",
                        "index": 0,
                        "tooltip": "The unique identifier of the comment to retrieve"
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                { "label": "Comment ID", "value": "id" },
                { "label": "Body", "value": "body" },
                { "label": "Posted At", "value": "posted_at" },
                { "label": "Is Pinned", "value": "is_pinned" },
                { "label": "Attachments", "value": "attachments" },
                { "label": "Links", "value": "_links" },
                { "label": "Links Self", "value": "_links.self" },
                { "label": "Links Related", "value": "_links.related" },
                { "label": "Links Related Conversation", "value": "_links.related.conversation" },
                { "label": "Links Related Mentions", "value": "_links.related.mentions" },
                { "label": "Author", "value": "author" },
                { "label": "Author ID", "value": "author.id" },
                { "label": "Author Email", "value": "author.email" },
                { "label": "Author Username", "value": "author.username" },
                { "label": "Author First Name", "value": "author.first_name" },
                { "label": "Author Last Name", "value": "author.last_name" },
                { "label": "Author Is Admin", "value": "author.is_admin" },
                { "label": "Author Is Available", "value": "author.is_available" },
                { "label": "Author Is Blocked", "value": "author.is_blocked" },
                { "label": "Author Type", "value": "author.type" },
                { "label": "Author Custom Fields", "value": "author.custom_fields" },
                { "label": "Author Links", "value": "author._links" },
                { "label": "Author Links Self", "value": "author._links.self" },
                { "label": "Author Links Related", "value": "author._links.related" },
                { "label": "Author Links Related Inboxes", "value": "author._links.related.inboxes" },
                { "label": "Author Links Related Conversations", "value": "author._links.related.conversations" }
            ]
        }
    ],
    "icon": "data:image/png;base64,"
}
