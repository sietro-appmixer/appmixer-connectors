{
    "name": "appmixer.front.comments.UpdateComment",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Update a comment in a conversation. You can update the body text and pin/unpin the comment.",
    "version": "1.0.0",
    "auth": {
        "service": "appmixer:front"
    },
    "quota": {
        "manager": "appmixer:front",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "commentId": {
                        "type": "string"
                    },
                    "body": {
                        "type": "string"
                    },
                    "isPinned": {
                        "type": "boolean"
                    }
                },
                "required": ["commentId"]
            },
            "inspector": {
                "inputs": {
                    "commentId": {
                        "type": "text",
                        "label": "Comment ID",
                        "index": 1,
                        "tooltip": "The unique identifier of the comment to update"
                    },
                    "body": {
                        "type": "textarea",
                        "label": "Comment Body",
                        "index": 2,
                        "tooltip": "The updated content of the comment"
                    },
                    "isPinned": {
                        "type": "toggle",
                        "label": "Pin Comment",
                        "index": 3,
                        "tooltip": "Whether to pin this comment to the top of the conversation"
                    }
                }
            }
        }
    ],
    "outPorts": ["out"],
    "icon": "data:image/png;base64,"
}
