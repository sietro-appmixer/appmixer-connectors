{
    "name": "appmixer.front.contacts.GetContact",
    "author": "Appmixer <info@appmixer.com>",
    "description": "Retrieve a single contact by ID.",
    "version": "1.0.0",
    "private": false,
    "auth": {
        "service": "appmixer:front"
    },
    "quota": {
        "manager": "appmixer:front",
        "resources": "requests"
    },
    "inPorts": [
        {
            "name": "in",
            "schema": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    }
                },
                "required": ["id"]
            },
            "inspector": {
                "inputs": {
                    "id": {
                        "type": "text",
                        "tooltip": "Id of the contact (e.g., cnt_123)",
                        "label": "Contact ID",
                        "index": 0
                    }
                }
            }
        }
    ],
    "outPorts": [
        {
            "name": "out",
            "options": [
                { "label": "Contact ID", "value": "id" },
                { "label": "Name", "value": "name" },
                { "label": "Description", "value": "description" },
                { "label": "Avatar URL", "value": "avatar_url" },
                { "label": "Is Private", "value": "is_private" },
                { "label": "Account", "value": "account" },
                { 
                    "label": "Links", 
                    "value": "links",
                    "schema": {
                        "type": "array",
                        "items": { "type": "string" }
                    }
                },
                {
                    "label": "Handles",
                    "value": "handles",
                    "schema": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "source": { "type": "string" },
                                "handle": { "type": "string" }
                            }
                        }
                    }
                },
                {
                    "label": "Groups",
                    "value": "groups",
                    "schema": {
                        "type": "array"
                    }
                },
                {
                    "label": "Custom Fields",
                    "value": "custom_fields",
                    "schema": {
                        "type": "object"
                    }
                },
                { "label": "Created At", "value": "created_at" },
                { "label": "Updated At", "value": "updated_at" },
                {
                    "label": "Links",
                    "value": "_links",
                    "schema": {
                        "type": "object",
                        "properties": {
                            "self": { "type": "string" },
                            "related": { "type": "object" }
                        }
                    }
                }
            ]
        }
    ],
    "icon": "data:image/png;base64,"
}
